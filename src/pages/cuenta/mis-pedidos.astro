---
export const prerender = false;
import Layout from '../../layouts/Layout.astro';
import { createServerClient, supabaseAdmin } from '../../lib/supabase';

// Proteger la ruta - verificar autenticacion
const supabase = await createServerClient(Astro.cookies);
const { data: { session } } = await supabase.auth.getSession();

if (!session) {
  return Astro.redirect('/auth/login');
}

// Obtener pedidos del usuario con sus items
// Usar supabaseAdmin para bypasear RLS y garantizar que los pedidos se muestran
const { data: orders } = await supabaseAdmin
  .from('orders')
  .select(`
    *,
    order_items (
      *,
      products (*)
    )
  `)
  .eq('user_id', session.user.id)
  .order('created_at', { ascending: false });

// Obtener solicitudes de cancelacion del usuario
const orderIds = orders?.map((o: any) => o.id) || [];
let cancellationRequests: any[] = [];
let invoicesMap: Record<string, any> = {};
if (orderIds.length > 0) {
  const { data } = await supabaseAdmin
    .from('cancellation_requests')
    .select('*')
    .in('order_id', orderIds);
  cancellationRequests = data || [];

  // Obtener facturas de los pedidos
  const { data: invoicesData } = await supabaseAdmin
    .from('invoices')
    .select('id, order_id, invoice_number')
    .in('order_id', orderIds)
    .eq('invoice_type', 'factura');

  if (invoicesData) {
    invoicesData.forEach((inv: any) => {
      invoicesMap[inv.order_id] = inv;
    });
  }
}

// Helpers
const getCancellation = (orderId: string) => {
  return cancellationRequests.find((c: any) => c.order_id === orderId);
};

// Pre-compute timeline steps for each order
const TIMELINE_STATUSES = ['pagado', 'enviado', 'entregado'] as const;
const TIMELINE_LABELS = { pagado: 'Confirmado', enviado: 'Enviado', entregado: 'Entregado' };
const getTimelineSteps = (orderStatus: string) => {
  const idx = TIMELINE_STATUSES.indexOf(orderStatus as any);
  return TIMELINE_STATUSES.map((s, i) => ({
    key: s,
    label: TIMELINE_LABELS[s],
    done: idx >= i,
    connectorDone: idx > i,
    isLast: i === TIMELINE_STATUSES.length - 1,
    number: i + 1,
  }));
};
---

<Layout title="Mis Pedidos">
  <div class="max-w-6xl mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">Mis Pedidos</h1>

    {!orders || orders.length === 0 ? (
      <div class="text-center py-12">
        <div class="mb-4">
          <svg class="w-24 h-24 mx-auto text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
          </svg>
        </div>
        <p class="text-xl text-gray-600 mb-4">No tienes pedidos aun</p>
        <a href="/productos" class="btn btn-primary">
          Empezar a Comprar
        </a>
      </div>
    ) : (
      <div class="space-y-6">
        {orders.map((order: any) => {
          const cancellation = getCancellation(order.id);
          return (
          <div class="card">
            <div class="flex justify-between items-start mb-4">
              <div>
                <h3 class="font-bold text-lg">Pedido #{order.id.slice(0, 8)}</h3>
                <p class="text-sm text-gray-600">
                  {new Date(order.created_at).toLocaleDateString('es-ES', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                  })}
                </p>
              </div>
              <span class={`badge badge-${order.status}`}>
                {order.status.toUpperCase()}
              </span>
            </div>

            <!-- Items del pedido -->
            <div class="space-y-2 mb-4">
              {order.order_items.map((item: any) => (
                <div class="flex items-center gap-4 border-b pb-2">
                  <img
                    src={item.products?.image_url || '/images/placeholder.jpg'}
                    alt={item.products?.name || 'Producto eliminado'}
                    class="w-16 h-16 object-cover rounded"
                  />
                  <div class="flex-1">
                    <p class="font-medium">{item.products?.name || 'Producto no disponible'}</p>
                    <p class="text-sm text-gray-600">
                      Cantidad: {item.quantity} x {item.price}&euro;
                    </p>
                  </div>
                  <p class="font-bold">
                    {(item.quantity * item.price).toFixed(2)}&euro;
                  </p>
                </div>
              ))}
            </div>

            <!-- Total y descuentos -->
            <div class="border-t pt-4 space-y-2">
              {order.promo_code && (
                <div class="flex justify-between text-sm text-green-600">
                  <span>Descuento aplicado ({order.promo_code}):</span>
                  <span>-{order.discount_amount}&euro;</span>
                </div>
              )}
              <div class="flex justify-between text-lg font-bold">
                <span>Total:</span>
                <span>{order.total}&euro;</span>
              </div>
            </div>

            <!-- Timeline de estado -->
            <div class="mt-4 mb-2">
              {order.status === 'cancelado' ? (
                <div class="flex items-center gap-2 text-red-600 text-sm font-medium">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path></svg>
                  Pedido cancelado
                </div>
              ) : (
                <div class="flex items-center gap-0">
                  {getTimelineSteps(order.status).map((step) => (
                    <div class="flex items-center">
                      <div class={`flex flex-col items-center ${step.done ? 'text-purple-600' : 'text-gray-300'}`}>
                        <div class={`w-7 h-7 rounded-full flex items-center justify-center text-xs font-bold ${step.done ? 'bg-purple-600 text-white' : 'bg-gray-200 text-gray-400'}`}>
                          {step.done ? 'âœ“' : step.number}
                        </div>
                        <span class="text-[10px] mt-0.5 font-medium">{step.label}</span>
                      </div>
                      {!step.isLast && (
                        <div class={`w-10 sm:w-16 h-0.5 mb-4 mx-1 ${step.connectorDone ? 'bg-purple-600' : 'bg-gray-200'}`}></div>
                      )}
                    </div>
                  ))}
                </div>
              )}
            </div>

            <!-- Estado de cancelacion -->
            {cancellation && cancellation.status === 'pendiente' && (
              <div class="mt-4 p-3 bg-yellow-50 border border-yellow-200 rounded-lg">
                <p class="text-sm text-yellow-800 font-medium">Cancelacion solicitada - Pendiente de revision</p>
                <p class="text-xs text-yellow-600 mt-1">Tu solicitud esta siendo revisada por nuestro equipo.</p>
              </div>
            )}

            {cancellation && cancellation.status === 'rechazada' && (
              <div class="mt-4 p-3 bg-red-50 border border-red-200 rounded-lg">
                <p class="text-sm text-red-800 font-medium">Solicitud de cancelacion rechazada</p>
                {cancellation.admin_notes && (
                  <p class="text-xs text-red-600 mt-1">Motivo: {cancellation.admin_notes}</p>
                )}
              </div>
            )}

            <!-- Acciones -->
            <div class="mt-4 flex flex-wrap gap-2">
              {invoicesMap[order.id] && (
                <a
                  href={`/factura/${invoicesMap[order.id].id}`}
                  target="_blank"
                  class="btn btn-primary inline-flex items-center gap-2"
                >
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                  Descargar Factura
                </a>
              )}

              {order.status === 'pagado' && (!cancellation || cancellation.status === 'rechazada') && (
                <button
                  class="btn btn-danger cancel-order-btn"
                  data-order-id={order.id}
                >
                  Solicitar Cancelacion
                </button>
              )}

              {order.status === 'entregado' && (
                <button
                  class="btn btn-secondary request-return-btn"
                  data-order-id={order.id}
                >
                  Solicitar Devolucion
                </button>
              )}

            </div>
          </div>
          );
        })}
      </div>
    )}
  </div>

  <!-- Modal de Cancelacion -->
  <div id="cancel-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-lg max-w-md w-full p-6">
      <h2 class="text-2xl font-bold mb-4">Solicitar Cancelacion</h2>

      <p class="text-gray-600 mb-4">
        Tu solicitud sera revisada por nuestro equipo. Si se aprueba,
        recibiras el reembolso completo automaticamente.
      </p>

      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Motivo de la cancelacion *
        </label>
        <textarea
          id="cancel-reason"
          rows="3"
          class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-400 focus:border-transparent"
          placeholder="Indica por que quieres cancelar el pedido..."
        ></textarea>
      </div>

      <div class="flex gap-2">
        <button id="close-cancel-modal" class="btn bg-gray-200 text-gray-800 flex-1">
          Volver
        </button>
        <button id="confirm-cancel" class="btn btn-danger flex-1">
          Enviar Solicitud
        </button>
      </div>
    </div>
  </div>

  <!-- Modal de Devolucion -->
  <div id="return-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-lg max-w-md w-full p-6">
      <h2 class="text-2xl font-bold mb-4">Solicitar Devolucion</h2>

      <div class="space-y-4 mb-6">
        <div class="bg-purple-50 p-4 rounded-lg">
          <h3 class="font-bold mb-2">Instrucciones de Envio</h3>
          <p class="text-sm">
            <strong>Direccion:</strong><br>
            Benice Pet Shop - Devoluciones<br>
            Calle Principal, 123<br>
            28001 Madrid, Espana
          </p>
        </div>

        <div class="bg-orange-50 p-4 rounded-lg">
          <h3 class="font-bold mb-2">Reembolso</h3>
          <p class="text-sm">
            El reembolso se procesara en 5-7 dias habiles una vez recibamos el producto.
          </p>
        </div>
      </div>

      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Motivo de la devolucion *
        </label>
        <textarea
          id="return-reason"
          rows="3"
          class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-400 focus:border-transparent"
          placeholder="Indica el motivo de la devolucion..."
        ></textarea>
      </div>

      <div class="flex gap-2">
        <button id="close-return-modal" class="btn bg-gray-200 text-gray-800 flex-1">
          Cancelar
        </button>
        <button id="confirm-return" class="btn btn-primary flex-1">
          Confirmar Devolucion
        </button>
      </div>
    </div>
  </div>

  <script>
    import { supabase } from '../../lib/supabase';

    // === CANCELACION ===
    const cancelModal = document.getElementById('cancel-modal');
    let currentCancelOrderId: string | null = null;

    document.querySelectorAll('.cancel-order-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        currentCancelOrderId = (e.currentTarget as HTMLElement).dataset.orderId || null;
        (document.getElementById('cancel-reason') as HTMLTextAreaElement).value = '';
        cancelModal?.classList.remove('hidden');
      });
    });

    document.getElementById('close-cancel-modal')?.addEventListener('click', () => {
      cancelModal?.classList.add('hidden');
      currentCancelOrderId = null;
    });

    document.getElementById('confirm-cancel')?.addEventListener('click', async () => {
      if (!currentCancelOrderId) return;

      const reason = (document.getElementById('cancel-reason') as HTMLTextAreaElement)?.value.trim();
      if (!reason) {
        alert('Debes indicar un motivo para la cancelacion.');
        return;
      }

      const btn = document.getElementById('confirm-cancel') as HTMLButtonElement;
      btn.disabled = true;
      btn.textContent = 'Enviando...';

      try {
        const { data: { session } } = await supabase.auth.getSession();
        if (!session) {
          alert('Debes iniciar sesion');
          return;
        }

        const response = await fetch('/api/cancel-order', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${session.access_token}`
          },
          body: JSON.stringify({
            order_id: currentCancelOrderId,
            reason: reason
          })
        });

        const result = await response.json();

        if (response.ok) {
          alert(result.message || 'Solicitud de cancelacion enviada correctamente.');
          cancelModal?.classList.add('hidden');
          currentCancelOrderId = null;
          window.location.reload();
        } else {
          alert(result.error || 'Error al enviar la solicitud');
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Error al enviar la solicitud');
      } finally {
        btn.disabled = false;
        btn.textContent = 'Enviar Solicitud';
      }
    });

    // === DEVOLUCION ===
    const returnModal = document.getElementById('return-modal');
    let currentReturnOrderId: string | null = null;

    document.querySelectorAll('.request-return-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        currentReturnOrderId = (e.currentTarget as HTMLElement).dataset.orderId || null;
        (document.getElementById('return-reason') as HTMLTextAreaElement).value = '';
        returnModal?.classList.remove('hidden');
      });
    });

    document.getElementById('close-return-modal')?.addEventListener('click', () => {
      returnModal?.classList.add('hidden');
      currentReturnOrderId = null;
    });

    document.getElementById('confirm-return')?.addEventListener('click', async () => {
      if (!currentReturnOrderId) return;

      const reason = (document.getElementById('return-reason') as HTMLTextAreaElement)?.value.trim();
      if (!reason) {
        alert('Debes indicar un motivo para la devolucion.');
        return;
      }

      const btn = document.getElementById('confirm-return') as HTMLButtonElement;
      btn.disabled = true;
      btn.textContent = 'Enviando...';

      try {
        const { data: { session } } = await supabase.auth.getSession();
        if (!session) {
          alert('Debes iniciar sesion');
          return;
        }

        const response = await fetch('/api/returns', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${session.access_token}`
          },
          body: JSON.stringify({
            orderId: currentReturnOrderId,
            reason: reason
          })
        });

        const result = await response.json();

        if (response.ok) {
          alert('Solicitud de devolucion enviada correctamente.');
          returnModal?.classList.add('hidden');
          currentReturnOrderId = null;
          window.location.reload();
        } else {
          alert(result.error || 'Error al solicitar la devolucion');
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Error al solicitar la devolucion');
      } finally {
        btn.disabled = false;
        btn.textContent = 'Confirmar Devolucion';
      }
    });
  </script>
</Layout>
