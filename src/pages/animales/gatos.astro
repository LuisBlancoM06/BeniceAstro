---
import Layout from '../../layouts/Layout.astro';
import { supabase } from '../../lib/supabase';

// Obtener productos de gatos
const { data: products } = await supabase
  .from('products')
  .select('*')
  .eq('animal_type', 'gato')
  .order('created_at', { ascending: false });

const categories = [
  { id: 'alimentacion', name: 'Alimentación', icon: 'food', description: 'Piensos y húmedos' },
  { id: 'salud', name: 'Salud', icon: 'health', description: 'Antiparasitarios' },
  { id: 'accesorios', name: 'Accesorios', icon: 'accessories', description: 'Camas y rascadores' },
  { id: 'juguetes', name: 'Juguetes', icon: 'toys', description: 'Ratones y cañas' },
];

const ages = [
  { id: 'cachorro', name: 'Gatito', description: '0-12 meses' },
  { id: 'adulto', name: 'Adulto', description: '1-7 años' },
  { id: 'senior', name: 'Senior', description: '+7 años' },
];
---

<Layout title="Productos para Gatos">
  <!-- Hero Section -->
  <section class="relative bg-orange-500 text-white py-16">
    <div class="absolute inset-0 bg-black/10"></div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
      <nav class="text-sm mb-4 opacity-80">
        <a href="/" class="hover:underline">Inicio</a>
        <span class="mx-2">›</span>
        <span>Gatos</span>
      </nav>
      <div class="flex items-center gap-4">
        <svg class="w-16 h-16" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C9 2 7 4 7 7v1.5C5.5 9 4 10.5 4 12.5c0 1.5.5 3 2 4v5.5c0 .5.5 1 1 1h2c.5 0 1-.5 1-1V20h4v2c0 .5.5 1 1 1h2c.5 0 1-.5 1-1v-5.5c1.5-1 2-2.5 2-4 0-2-1.5-3.5-3-4V7c0-3-2-5-5-5z"/></svg>
        <div>
          <h1 class="text-4xl md:text-5xl font-bold mb-2">Todo para tu Gato</h1>
          <p class="text-xl opacity-90">Los mejores productos para consentir a tu felino</p>
        </div>
      </div>
      <div class="mt-8 flex flex-wrap gap-4">
        <div class="bg-white/20 backdrop-blur rounded-lg px-6 py-3">
          <span class="font-bold text-2xl">{products?.length || 0}</span>
          <span class="ml-2">Productos</span>
        </div>
        <div class="bg-white/20 backdrop-blur rounded-lg px-6 py-3">
          <span class="font-bold text-2xl">Envío</span>
          <span class="ml-2">gratis +49€</span>
        </div>
        <div class="bg-white/20 backdrop-blur rounded-lg px-6 py-3">
          <span class="font-bold text-2xl">100%</span>
          <span class="ml-2">Michi approved</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Categorías -->
  <section class="py-12 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold mb-6">Categorías</h2>
      <div class="grid grid-cols-2 md:grid-cols-5 gap-4">
        {categories.map((cat) => (
          <a 
            href={`/gatos?categoria=${cat.id}`}
            class="bg-white rounded-xl p-6 text-center hover:shadow-lg transition-all hover:-translate-y-1 border border-gray-100 group"
          >
            <span class="text-4xl block mb-3 group-hover:scale-110 transition-transform">{cat.icon}</span>
            <h3 class="font-semibold text-gray-900">{cat.name}</h3>
            <p class="text-sm text-gray-500 mt-1">{cat.description}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Productos -->
  <section class="py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col lg:flex-row gap-8">
        <!-- Sidebar Filtros -->
        <aside class="lg:w-64 flex-shrink-0">
          <div class="bg-white rounded-xl shadow-sm p-6 sticky top-24">
            <h3 class="font-bold text-lg mb-4">Filtros</h3>

            <div class="mb-6">
              <h4 class="font-medium text-gray-700 mb-3">Edad</h4>
              <div class="space-y-2">
                {ages.map((age) => (
                  <label class="flex items-center gap-2 cursor-pointer">
                    <input type="checkbox" name="age" value={age.id} class="rounded text-orange-500 focus:ring-orange-500" />
                    <span>{age.name}</span>
                  </label>
                ))}
              </div>
            </div>

            <div class="mb-6">
              <h4 class="font-medium text-gray-700 mb-3">Categoría</h4>
              <div class="space-y-2">
                {categories.map((cat) => (
                  <label class="flex items-center gap-2 cursor-pointer">
                    <input type="checkbox" name="category" value={cat.id} class="rounded text-orange-500 focus:ring-orange-500" />
                    <span>{cat.name}</span>
                  </label>
                ))}
              </div>
            </div>

            <label class="flex items-center gap-2 cursor-pointer mb-6">
              <input type="checkbox" name="on_sale" class="rounded text-orange-500" />
              <span class="font-medium">Solo ofertas</span>
            </label>

            <button class="w-full bg-orange-500 text-white py-2 rounded-lg hover:bg-orange-600 transition-colors">
              Aplicar filtros
            </button>
          </div>
        </aside>

        <!-- Grid de productos -->
        <div class="flex-1">
          <div class="flex justify-between items-center mb-6">
            <p class="text-gray-600">{products?.length || 0} productos</p>
            <select class="border rounded-lg px-4 py-2">
              <option>Más relevantes</option>
              <option>Precio: menor a mayor</option>
              <option>Precio: mayor a menor</option>
            </select>
          </div>

          <div id="products-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            {products?.map((product) => (
              <div class="product-card" data-product={JSON.stringify(product)}></div>
            ))}
          </div>

          {(!products || products.length === 0) && (
            <div class="text-center py-16">
              <svg class="w-16 h-16 mx-auto mb-4 text-gray-300" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C9 2 7 4 7 7v1.5C5.5 9 4 10.5 4 12.5c0 1.5.5 3 2 4v5.5c0 .5.5 1 1 1h2c.5 0 1-.5 1-1V20h4v2c0 .5.5 1 1 1h2c.5 0 1-.5 1-1v-5.5c1.5-1 2-2.5 2-4 0-2-1.5-3.5-3-4V7c0-3-2-5-5-5z"/></svg>
              <h3 class="text-xl font-semibold text-gray-700 mb-2">No hay productos disponibles</h3>
              <p class="text-gray-500">Pronto añadiremos más productos para gatos</p>
            </div>
          )}
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  import { createElement } from 'react';
  import { createRoot } from 'react-dom/client';
  import ProductCard from '../../components/ProductCard.tsx';
  
  document.addEventListener('DOMContentLoaded', () => {
    const productCards = document.querySelectorAll('.product-card');
    productCards.forEach((container) => {
      const productData = container.getAttribute('data-product');
      if (productData) {
        const product = JSON.parse(productData);
        const root = createRoot(container);
        root.render(createElement(ProductCard, { product, showQuickActions: true }));
      }
    });
  });
</script>

