                {categories.map((cat) => (
                  <label class="flex items-center gap-3 cursor-pointer group">
                    <input type="checkbox" name="category" value={cat.id} class="w-4 h-4 rounded border-gray-300 text-purple-600 focus:ring-purple-500 transition" />
