      <div id="products-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {products?.map((product: any) => (
          <div class="product-card" data-product={JSON.stringify(product)}></div>
        ))}
      </div>

      {(!products || products.length === 0) && (
        <div class="text-center py-16">
          <svg class="w-16 h-16 mx-auto mb-4 text-gray-300" fill="currentColor" viewBox="0 0 24 24"><path d="M12 20a8 8 0 01-8-8 8 8 0 018-8 8 8 0 018 8 8 8 0 01-8 8zm5-9h-4V7l-5 5 5 5v-4h4v-2z"/></svg>
