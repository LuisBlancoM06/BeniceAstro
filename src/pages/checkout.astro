---
import Layout from '../layouts/Layout.astro';
import AddressAutocomplete from '../components/AddressAutocomplete.tsx';
---

<Layout title="Finalizar Compra - Benice Pet Shop" hideNewsletterPopup={true}>
  <div class="min-h-screen bg-gradient-to-br from-gray-50 via-purple-50/30 to-orange-50/20 py-6 sm:py-10">
    <div class="max-w-6xl mx-auto px-4">
      
      <!-- Header con pasos de compra -->
      <div class="mb-8">
        <div class="flex items-center justify-center gap-0 mb-6">
          <!-- Paso 1: Carrito -->
          <div class="flex items-center">
            <div class="flex items-center gap-2">
              <span class="w-9 h-9 rounded-full bg-purple-600 text-white flex items-center justify-center text-sm font-bold shadow-md shadow-purple-200">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
              </span>
              <span class="text-sm font-semibold text-purple-700 hidden sm:inline">Carrito</span>
            </div>
          </div>
          <div class="w-10 sm:w-16 h-0.5 bg-purple-600 mx-1"></div>
          <!-- Paso 2: Revisión -->
          <div class="flex items-center">
            <div class="flex items-center gap-2">
              <span class="w-9 h-9 rounded-full bg-purple-600 text-white flex items-center justify-center text-sm font-bold shadow-md shadow-purple-200 ring-4 ring-purple-100">2</span>
              <span class="text-sm font-semibold text-purple-700 hidden sm:inline">Revisión</span>
            </div>
          </div>
          <div class="w-10 sm:w-16 h-0.5 bg-gray-300 mx-1"></div>
          <!-- Paso 3: Pago Stripe -->
          <div class="flex items-center">
            <div class="flex items-center gap-2">
              <span class="w-9 h-9 rounded-full bg-gray-200 text-gray-500 flex items-center justify-center text-sm font-bold">3</span>
              <span class="text-sm font-medium text-gray-400 hidden sm:inline">Pago seguro</span>
            </div>
          </div>
        </div>
        <div class="text-center">
          <h1 class="text-3xl sm:text-4xl font-extrabold text-gray-900">Finalizar Compra</h1>
          <p class="text-gray-500 mt-2 text-sm">Revisa tu pedido antes de proceder al pago seguro</p>
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        
        <!-- Columna izquierda: Productos -->
        <div class="lg:col-span-2 space-y-5">
          <!-- Listado de productos -->
          <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
            <div class="flex items-center justify-between p-5 sm:p-6 border-b border-gray-100">
              <h2 class="text-lg font-bold text-gray-800 flex items-center gap-2">
                <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>
                Tu Pedido
              </h2>
              <span id="item-count" class="text-xs bg-purple-100 text-purple-700 px-3 py-1 rounded-full font-semibold">0 productos</span>
            </div>
            
            <div id="checkout-items" class="p-5 sm:p-6 space-y-3">
              <div class="text-center py-8 text-gray-500">
                <div class="animate-pulse">Cargando productos...</div>
              </div>
            </div>

            <div class="px-5 sm:px-6 pb-5 pt-2 border-t border-gray-50">
              <a href="/productos" class="inline-flex items-center gap-1.5 text-sm text-purple-600 hover:text-purple-800 font-medium transition-colors group">
                <svg class="w-4 h-4 transition-transform group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
                Seguir comprando
              </a>
            </div>
          </div>

          <!-- Datos de envío (autocompletados desde Stripe Customer) -->
          <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden" id="shipping-form-section">
            <div class="flex items-center justify-between p-5 sm:p-6 border-b border-gray-100">
              <h2 class="text-lg font-bold text-gray-800 flex items-center gap-2">
                <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                Datos de Envío
              </h2>
              <span id="autofill-badge" class="text-[10px] bg-green-100 text-green-700 px-2.5 py-1 rounded-full font-semibold hidden">
                <svg class="w-3 h-3 inline mr-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                Autocompletado
              </span>
            </div>
            
            <div class="p-5 sm:p-6 space-y-4">
              <!-- Skeleton de carga -->
              <div id="shipping-skeleton" class="space-y-3 animate-pulse">
                <div class="h-10 bg-gray-100 rounded-lg"></div>
                <div class="grid grid-cols-2 gap-3">
                  <div class="h-10 bg-gray-100 rounded-lg"></div>
                  <div class="h-10 bg-gray-100 rounded-lg"></div>
                </div>
                <div class="h-10 bg-gray-100 rounded-lg"></div>
                <div class="h-10 bg-gray-100 rounded-lg"></div>
              </div>

              <!-- Formulario real (oculto hasta que cargue) -->
              <div id="shipping-fields" class="hidden space-y-4">
                <!-- Nombre completo -->
                <div>
                  <label for="ship-name" class="block text-xs font-semibold text-gray-600 mb-1.5">Nombre completo</label>
                  <input
                    type="text"
                    id="ship-name"
                    placeholder="Juan Pérez"
                    maxlength="100"
                    class="w-full px-3.5 py-2.5 text-sm border border-gray-200 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-shadow bg-gray-50 focus:bg-white"
                  />
                </div>

                <!-- Email y Teléfono -->
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                  <div>
                    <label for="ship-email" class="block text-xs font-semibold text-gray-600 mb-1.5">Email</label>
                    <input
                      type="email"
                      id="ship-email"
                      placeholder="tu@email.com"
                      maxlength="254"
                      class="w-full px-3.5 py-2.5 text-sm border border-gray-200 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-shadow bg-gray-50 focus:bg-white"
                    />
                  </div>
                  <div>
                    <label for="ship-phone" class="block text-xs font-semibold text-gray-600 mb-1.5">Teléfono</label>
                    <input
                      type="tel"
                      id="ship-phone"
                      placeholder="+34 600 123 456"
                      maxlength="20"
                      class="w-full px-3.5 py-2.5 text-sm border border-gray-200 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-shadow bg-gray-50 focus:bg-white"
                    />
                  </div>
                </div>

                <!-- Buscador de dirección con autocompletado -->
                <AddressAutocomplete
                  client:load
                  id="ship-address-search"
                  placeholder="Escribe tu dirección para autocompletar..."
                  fieldIds={{
                    line1: 'ship-line1',
                    line2: 'ship-line2',
                    city: 'ship-city',
                    state: 'ship-state',
                    postalCode: 'ship-postal',
                    country: 'ship-country',
                  }}
                />

                <!-- Dirección línea 1 -->
                <div>
                  <label for="ship-line1" class="block text-xs font-semibold text-gray-600 mb-1.5">Calle y número</label>
                  <input
                    type="text"
                    id="ship-line1"
                    placeholder="Calle, número, piso, puerta"
                    maxlength="200"
                    class="w-full px-3.5 py-2.5 text-sm border border-gray-200 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-shadow bg-gray-50 focus:bg-white"
                  />
                </div>

                <!-- Dirección línea 2 -->
                <div>
                  <label for="ship-line2" class="block text-xs font-semibold text-gray-600 mb-1.5">Dirección (línea 2) <span class="text-gray-400 font-normal">— opcional</span></label>
                  <input
                    type="text"
                    id="ship-line2"
                    placeholder="Urbanización, edificio, etc."
                    maxlength="200"
                    class="w-full px-3.5 py-2.5 text-sm border border-gray-200 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-shadow bg-gray-50 focus:bg-white"
                  />
                </div>

                <!-- Ciudad, Provincia, CP, País -->
                <div class="grid grid-cols-2 sm:grid-cols-4 gap-3">
                  <div>
                    <label for="ship-city" class="block text-xs font-semibold text-gray-600 mb-1.5">Ciudad</label>
                    <input
                      type="text"
                      id="ship-city"
                      placeholder="Madrid"
                      maxlength="100"
                      class="w-full px-3.5 py-2.5 text-sm border border-gray-200 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-shadow bg-gray-50 focus:bg-white"
                    />
                  </div>
                  <div>
                    <label for="ship-state" class="block text-xs font-semibold text-gray-600 mb-1.5">Provincia</label>
                    <input
                      type="text"
                      id="ship-state"
                      placeholder="Madrid"
                      maxlength="100"
                      class="w-full px-3.5 py-2.5 text-sm border border-gray-200 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-shadow bg-gray-50 focus:bg-white"
                    />
                  </div>
                  <div>
                    <label for="ship-postal" class="block text-xs font-semibold text-gray-600 mb-1.5">Código postal</label>
                    <input
                      type="text"
                      id="ship-postal"
                      placeholder="28001"
                      maxlength="10"
                      class="w-full px-3.5 py-2.5 text-sm border border-gray-200 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-shadow bg-gray-50 focus:bg-white"
                    />
                  </div>
                  <div>
                    <label for="ship-country" class="block text-xs font-semibold text-gray-600 mb-1.5">País</label>
                    <select
                      id="ship-country"
                      class="w-full px-3.5 py-2.5 text-sm border border-gray-200 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-shadow bg-gray-50 focus:bg-white"
                    >
                      <option value="ES">España</option>
                      <option value="PT">Portugal</option>
                      <option value="FR">Francia</option>
                      <option value="DE">Alemania</option>
                      <option value="IT">Italia</option>
                      <option value="GB">Reino Unido</option>
                      <option value="NL">Países Bajos</option>
                      <option value="BE">Bélgica</option>
                      <option value="AT">Austria</option>
                      <option value="CH">Suiza</option>
                    </select>
                  </div>
                </div>

                <!-- Info: datos cargados desde Stripe -->
                <p class="text-[11px] text-gray-400 flex items-center gap-1">
                  <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                  Estos datos se usan para preparar tu envío. El pago se realiza de forma segura en Stripe.
                </p>
              </div>
            </div>
          </div>

          <!-- Garantías y confianza -->
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-3">
            <div class="bg-white rounded-xl border border-gray-100 p-4 flex items-center gap-3">
              <div class="w-10 h-10 bg-green-50 rounded-lg flex items-center justify-center shrink-0">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path></svg>
              </div>
              <div>
                <p class="text-xs font-bold text-gray-800">Pago 100% Seguro</p>
                <p class="text-[11px] text-gray-500">Encriptación SSL 256-bit</p>
              </div>
            </div>
            <div class="bg-white rounded-xl border border-gray-100 p-4 flex items-center gap-3">
              <div class="w-10 h-10 bg-blue-50 rounded-lg flex items-center justify-center shrink-0">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path></svg>
              </div>
              <div>
                <p class="text-xs font-bold text-gray-800">Múltiples Métodos</p>
                <p class="text-[11px] text-gray-500">Tarjeta, Apple Pay, Google Pay</p>
              </div>
            </div>
            <div class="bg-white rounded-xl border border-gray-100 p-4 flex items-center gap-3">
              <div class="w-10 h-10 bg-purple-50 rounded-lg flex items-center justify-center shrink-0">
                <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path></svg>
              </div>
              <div>
                <p class="text-xs font-bold text-gray-800">Devolución Fácil</p>
                <p class="text-[11px] text-gray-500">30 días para devolver</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Columna derecha: Panel de pago -->
        <div class="lg:col-span-1">
          <div class="bg-white rounded-2xl shadow-sm border border-gray-100 sticky top-4 overflow-hidden">
            <!-- Header Stripe -->
            <div class="bg-gradient-to-r from-purple-700 to-purple-800 px-5 py-4">
              <div class="flex items-center justify-between">
                <h2 class="text-white font-bold flex items-center gap-2">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 14l6-6m-5.5.5h.01m4.99 5h.01M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16l3.5-2 3.5 2 3.5-2 3.5 2z"></path></svg>
                  Resumen
                </h2>
                <div class="flex items-center gap-1">
                  <svg class="w-4 h-4 text-purple-200" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path></svg>
                  <span class="text-[10px] text-purple-200 font-medium">SSL Seguro</span>
                </div>
              </div>
            </div>

            <div class="p-5">
              <!-- Código promocional -->
              <div class="mb-5">
                <label class="block text-xs font-semibold text-gray-500 mb-1.5 uppercase tracking-wider">Código descuento</label>
                <div class="flex gap-2">
                  <input 
                    type="text"
                    id="promo-code"
                    placeholder="Ej: WELCOME10"
                    class="flex-1 px-3 py-2.5 text-sm border border-gray-200 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-shadow bg-gray-50 focus:bg-white"
                  />
                  <button 
                    id="apply-promo"
                    class="px-4 py-2.5 text-sm bg-purple-100 text-purple-700 font-bold rounded-lg hover:bg-purple-200 transition-colors shrink-0"
                  >
                    Aplicar
                  </button>
                </div>
                <p id="promo-message" class="text-xs mt-1.5 hidden"></p>
              </div>

              <!-- Desglose de precios -->
              <div class="space-y-3 border-t border-dashed border-gray-200 pt-4">
                <div class="flex justify-between text-sm text-gray-600">
                  <span>Subtotal</span>
                  <span id="subtotal" class="font-medium text-gray-800">0.00€</span>
                </div>
                <div class="flex justify-between text-sm" id="discount-row" style="display: none;">
                  <span class="text-green-600 flex items-center gap-1">
                    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path></svg>
                    Descuento
                  </span>
                  <span id="discount" class="text-green-600 font-semibold">-0.00€</span>
                </div>
                <div class="flex justify-between text-sm text-gray-600">
                  <span class="flex items-center gap-1">
                    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8"></path></svg>
                    Envío
                  </span>
                  <span id="shipping" class="font-medium text-gray-800">4.99€</span>
                </div>
                
                <!-- Separador -->
                <div class="border-t-2 border-gray-100 my-1"></div>
                
                <div class="flex justify-between items-end">
                  <div>
                    <span class="text-xs text-gray-500 uppercase tracking-wider font-medium">Total</span>
                    <span class="text-[10px] text-gray-400 block">IVA incluido</span>
                  </div>
                  <span id="total" class="text-2xl font-extrabold text-purple-700">0.00€</span>
                </div>
              </div>

              <!-- Info envío gratis -->
              <div id="free-shipping-info" class="mt-4 p-3 bg-gradient-to-r from-orange-50 to-yellow-50 border border-orange-200/60 rounded-xl text-xs hidden">
                <p class="text-orange-800 flex items-center gap-1.5 font-medium">
                  <svg class="w-4 h-4 text-orange-500 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8"></path></svg>
                  Añade <strong id="remaining-for-free" class="text-orange-700">0€</strong> más para envío GRATIS
                </p>
                <div class="mt-2 w-full bg-orange-200/50 rounded-full h-1.5">
                  <div id="shipping-progress" class="bg-orange-500 h-1.5 rounded-full transition-all duration-500" style="width: 0%"></div>
                </div>
              </div>

              <!-- Envío gratis alcanzado -->
              <div id="free-shipping-achieved" class="mt-4 p-3 bg-green-50 border border-green-200/60 rounded-xl text-xs hidden">
                <p class="text-green-700 flex items-center gap-1.5 font-semibold">
                  <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                  ¡Envío GRATIS incluido!
                </p>
              </div>

              <!-- Botón principal Stripe -->
              <button 
                id="checkout-btn"
                class="group relative w-full mt-5 py-4 bg-gradient-to-r from-purple-600 via-purple-700 to-purple-700 text-white font-bold rounded-xl hover:from-orange-500 hover:via-orange-500 hover:to-orange-600 transition-all duration-300 shadow-lg shadow-purple-200 hover:shadow-orange-200 flex items-center justify-center gap-2.5 disabled:opacity-50 disabled:cursor-not-allowed text-base overflow-hidden"
              >
                <div class="absolute inset-0 bg-gradient-to-r from-white/0 via-white/10 to-white/0 translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-700"></div>
                <svg class="w-5 h-5 relative z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
                <span class="relative z-10">Pagar con Stripe</span>
              </button>

              <!-- Métodos de pago aceptados -->
              <div class="mt-4 pt-4 border-t border-gray-100">
                <p class="text-[10px] text-gray-400 text-center mb-2.5 uppercase tracking-wider font-medium">Métodos aceptados</p>
                <div class="flex items-center justify-center gap-2">
                  <!-- Visa -->
                  <div class="w-10 h-7 bg-white border border-gray-200 rounded flex items-center justify-center" title="Visa">
                    <svg class="w-7 h-4" viewBox="0 0 48 32" fill="none">
                      <rect width="48" height="32" rx="4" fill="white"/>
                      <path d="M20.3 21.7h-3l1.9-11.4h3l-1.9 11.4z" fill="#00579F"/>
                      <path d="M31.9 10.6c-.6-.2-1.5-.5-2.7-.5-3 0-5.1 1.5-5.1 3.7 0 1.6 1.5 2.5 2.7 3.1 1.2.6 1.6.9 1.6 1.4 0 .8-.9 1.1-1.8 1.1-1.2 0-1.9-.2-2.9-.6l-.4-.2-.4 2.5c.7.3 2.1.6 3.5.6 3.2 0 5.2-1.5 5.3-3.8 0-1.3-.8-2.2-2.5-3-1-.5-1.7-.9-1.7-1.4 0-.5.5-1 1.7-1 1-.02 1.7.2 2.2.4l.3.1.5-2.4z" fill="#00579F"/>
                      <path d="M36.5 10.3h-2.3c-.7 0-1.3.2-1.6.9l-4.4 10.5h3.2l.6-1.7h3.8l.4 1.7h2.8l-2.5-11.4zm-3.6 7.4l1.2-3.2.5-1.3.3 1.3.7 3.2h-2.7z" fill="#00579F"/>
                      <path d="M16.5 10.3l-3 7.8-.3-1.6c-.5-1.8-2.2-3.8-4.1-4.8l2.7 10h3.2l4.8-11.4h-3.3z" fill="#00579F"/>
