                  <path d="M19.5 3.6l-4.8 1V9l4.8-1V3.6zm0 6.1h-4.8v14h4.8v-14z" fill="#6772E5"/>
                  <path d="M27 9.3l-.3-1.6h-4.2v14h4.8v-9.5c1.1-1.5 3-1.2 3.6-1v-4.4c-.7-.2-3.1-.7-3.9 2.5z" fill="#6772E5"/>
                  <path d="M36.2 4.5l-4.7 1v12.7c0 2.3 1.8 4.1 4.1 4.1 1.3 0 2.3-.2 2.8-.5v-3.8c-.5.2-3 .8-3-1.3v-5h3v-4h-3l-.2-3.2z" fill="#6772E5"/>
                  <path d="M47.5 14.6c0-2 1-2.8 2.5-2.8.8 0 1.8.2 2.6.7V8c-.8-.3-1.7-.5-2.6-.5-4 0-7.3 2.8-7.3 7.2s3.2 7 7.2 7c1 0 2-.2 2.7-.5v-4.5c-.8.4-1.6.6-2.6.6-1.4 0-2.5-.8-2.5-2.7z" fill="#6772E5"/>
