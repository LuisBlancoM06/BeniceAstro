  <style>
    @keyframes shimmer {
      0% { background-position: -200% 0; }
      100% { background-position: 200% 0; }
    }
    .btn-shimmer {
      background-size: 200% 100%;
      animation: shimmer 3s ease-in-out infinite;
    }
  </style>

  <script>
    import { $cartItems, $cartSubtotal, updateQuantity, removeFromCart, clearCart } from '../stores/cart';
    import { supabase } from '../lib/supabase';

    let appliedPromoCode = '';
    let discountPercent = 0;

    // Renderizar items
    function renderItems() {
      const items = $cartItems.get();
      const container = document.getElementById('checkout-items');
      const countEl = document.getElementById('item-count');
      
      const totalItems = items.reduce((s: number, i: any) => s + i.quantity, 0);
      if (countEl) countEl.textContent = `${totalItems} producto${totalItems !== 1 ? 's' : ''}`;

      if (items.length === 0) {
        container!.innerHTML = `
          <div class="text-center py-10">
            <div class="w-20 h-20 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center">
              <svg class="w-10 h-10 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>
            </div>
            <h3 class="text-lg font-bold text-gray-700 mb-1">Tu carrito está vacío</h3>
            <p class="text-sm text-gray-400 mb-5">¡Descubre nuestros productos para tu mascota!</p>
            <a href="/productos" class="inline-flex items-center gap-2 px-6 py-3 bg-purple-600 text-white text-sm font-bold rounded-xl hover:bg-purple-700 transition-all shadow-md shadow-purple-200">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
              Explorar productos
            </a>
          </div>
        `;
        return;
      }

      container!.innerHTML = items.map(item => {
        const unitPrice = item.salePrice || item.price;
        const lineTotal = (unitPrice * item.quantity).toFixed(2);
        const hasDiscount = item.salePrice && item.salePrice < item.price;
        const imgSrc = item.image || '';
        const isPlaceholderImg = imgSrc.includes('placehold.co') || imgSrc.includes('via.placeholder') || !imgSrc;
        const checkoutImageHtml = isPlaceholderImg
          ? `<div class="w-full h-full bg-gradient-to-br from-purple-400 to-pink-500 flex items-center justify-center rounded-lg"><span class="text-white/80 text-[10px] font-semibold text-center px-1">${item.name}</span></div>`
          : `<img src="${imgSrc}" alt="${item.name}" class="w-full h-full object-contain p-1.5" onerror="this.outerHTML='<div class=\\'w-full h-full bg-gradient-to-br from-purple-400 to-pink-500 flex items-center justify-center rounded-lg\\'><span class=\\'text-white/80 text-[10px] font-semibold text-center px-1\\'>${item.name.replace(/'/g, "\\'")}</span></div>'" />`;
        return `
        <div class="flex items-center gap-3 sm:gap-4 p-3 sm:p-4 bg-gray-50/80 rounded-xl border border-gray-100 hover:border-purple-200/60 hover:shadow-sm transition-all group">
          <div class="w-16 h-16 sm:w-20 sm:h-20 bg-white rounded-xl overflow-hidden flex-shrink-0 border border-gray-100 group-hover:border-purple-100">
            ${checkoutImageHtml}
          </div>
          <div class="flex-1 min-w-0">
            <h3 class="font-bold text-sm text-gray-800 truncate">${item.name}</h3>
            <div class="flex items-center gap-2 mt-0.5">
              <span class="text-xs font-semibold ${hasDiscount ? 'text-green-600' : 'text-gray-500'}">${unitPrice.toFixed(2)}€/ud</span>
              ${hasDiscount ? `<span class="text-[10px] text-gray-400 line-through">${item.price.toFixed(2)}€</span>` : ''}
            </div>
          </div>
          <div class="flex items-center gap-1 shrink-0">
            <button 
              onclick="window.__changeQty('${item.id}', ${item.quantity - 1})"
              class="w-8 h-8 rounded-lg bg-white border border-gray-200 text-gray-600 hover:bg-purple-50 hover:border-purple-300 hover:text-purple-600 flex items-center justify-center transition-all text-sm font-bold shadow-sm"
              ${item.quantity <= 1 ? 'disabled style="opacity:0.3;cursor:not-allowed;"' : ''}
            >−</button>
            <span class="w-8 text-center text-sm font-extrabold text-gray-800">${item.quantity}</span>
            <button 
              onclick="window.__changeQty('${item.id}', ${item.quantity + 1})"
              class="w-8 h-8 rounded-lg bg-white border border-gray-200 text-gray-600 hover:bg-purple-50 hover:border-purple-300 hover:text-purple-600 flex items-center justify-center transition-all text-sm font-bold shadow-sm"
            >+</button>
          </div>
          <span class="text-sm font-extrabold text-purple-700 w-16 text-right shrink-0">${lineTotal}€</span>
          <button 
            onclick="window.__removeItem('${item.id}')"
            class="p-2 text-gray-300 hover:text-red-500 hover:bg-red-50 rounded-lg transition-all shrink-0" 
            title="Eliminar"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
          </button>
        </div>`;
      }).join('');
    }

    // Funciones globales para los botones inline
    (window as any).__changeQty = (id: string, qty: number) => {
      if (qty < 1) return;
      updateQuantity(id, qty);
      renderItems();
      updateTotals();
    };

    (window as any).__removeItem = (id: string) => {
      removeFromCart(id);
      renderItems();
      updateTotals();
    };

    // Actualizar totales
    function updateTotals() {
      const subtotal = $cartSubtotal.get();
      const discount = discountPercent > 0 ? subtotal * (discountPercent / 100) : 0;
      const afterDiscount = subtotal - discount;
      // Envío gratis basado en subtotal PRE-descuento (consistente con Flutter y backend Stripe)
      const shipping = subtotal >= 49 ? 0 : 4.99;
      const total = afterDiscount + shipping;

      document.getElementById('subtotal')!.textContent = `${subtotal.toFixed(2)}€`;
      
      const discountRow = document.getElementById('discount-row') as HTMLElement;
      if (discount > 0) {
        discountRow.style.display = 'flex';
        document.getElementById('discount')!.textContent = `-${discount.toFixed(2)}€`;
      } else {
        discountRow.style.display = 'none';
      }

      const shippingEl = document.getElementById('shipping')!;
      if (shipping === 0) {
        shippingEl.textContent = '¡GRATIS!';
        shippingEl.className = 'font-bold text-green-600';
      } else {
        shippingEl.textContent = `${shipping.toFixed(2)}€`;
        shippingEl.className = 'font-medium text-gray-800';
      }

      document.getElementById('total')!.textContent = `${total.toFixed(2)}€`;

      // Barra de progreso envío gratis
      const freeShippingInfo = document.getElementById('free-shipping-info') as HTMLElement;
      const freeShippingAchieved = document.getElementById('free-shipping-achieved') as HTMLElement;
      
      if (subtotal >= 49) {
        freeShippingInfo.classList.add('hidden');
        freeShippingAchieved.classList.remove('hidden');
      } else if (subtotal > 0) {
        freeShippingInfo.classList.remove('hidden');
        freeShippingAchieved.classList.add('hidden');
        document.getElementById('remaining-for-free')!.textContent = `${(49 - subtotal).toFixed(2)}€`;
        const progress = Math.min((subtotal / 49) * 100, 100);
        (document.getElementById('shipping-progress') as HTMLElement).style.width = `${progress}%`;
      } else {
        freeShippingInfo.classList.add('hidden');
        freeShippingAchieved.classList.add('hidden');
      }
    }

    // Aplicar código promocional
    async function applyPromoCode() {
      const input = document.getElementById('promo-code') as HTMLInputElement;
      const code = input.value.trim().toUpperCase();
      const message = document.getElementById('promo-message');
      const btn = document.getElementById('apply-promo') as HTMLButtonElement;

      if (!code) return;

      btn.disabled = true;
      btn.textContent = '...';

      try {
        const { data: promo, error } = await supabase
          .from('promo_codes')
          .select('discount_percentage')
          .eq('code', code)
          .eq('active', true)
          .single();

        if (error || !promo) {
          message!.textContent = '✕ Código no válido o expirado';
          message!.className = 'text-xs mt-1.5 text-red-600 font-medium';
          message!.classList.remove('hidden');
          return;
        }

        appliedPromoCode = code;
        discountPercent = promo.discount_percentage;
        
        message!.textContent = `✓ ¡${discountPercent}% de descuento aplicado!`;
        message!.className = 'text-xs mt-1.5 text-green-600 font-bold';
        message!.classList.remove('hidden');
        input.disabled = true;
        input.classList.add('bg-green-50', 'border-green-200');

        updateTotals();
      } catch (err) {
        message!.textContent = '✕ Error al verificar el código';
        message!.className = 'text-xs mt-1.5 text-red-600';
        message!.classList.remove('hidden');
      } finally {
        btn.disabled = false;
        btn.textContent = 'Aplicar';
      }
    }

    // Proceder al pago con Stripe
    async function proceedToPayment() {
      const items = $cartItems.get();
      
      if (items.length === 0) return;

      const btn = document.getElementById('checkout-btn') as HTMLButtonElement;
      btn.disabled = true;
      btn.innerHTML = `
        <svg class="w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
        </svg>
        <span>Conectando con Stripe...</span>
      `;

      try {
        const { data: { session } } = await supabase.auth.getSession();

        const response = await fetch('/api/stripe/create-checkout-session', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            items: items,
            userId: session?.user?.id || null,
            promoCode: appliedPromoCode
          })
        });

        const result = await response.json();

        if (!response.ok) {
          throw new Error(result.error || 'Error al crear sesión de pago');
        }

        // Redirigir a Stripe Checkout
        window.location.href = result.url;

      } catch (err: any) {
        console.error('Checkout error:', err);
        
        // Mostrar error inline en vez de alert
        const errorDiv = document.createElement('div');
        errorDiv.className = 'mt-3 p-3 bg-red-50 border border-red-200 rounded-xl text-sm text-red-700 flex items-start gap-2';
        errorDiv.innerHTML = `
          <svg class="w-4 h-4 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span>${err.message || 'Error al procesar el pago. Inténtalo de nuevo.'}</span>
        `;
        btn.parentElement?.insertBefore(errorDiv, btn.nextSibling);
        setTimeout(() => errorDiv.remove(), 5000);

        btn.disabled = false;
        btn.innerHTML = `
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
          </svg>
          <span>Pagar con Stripe</span>
        `;
      }
    }

    // Event listeners
    document.getElementById('apply-promo')?.addEventListener('click', applyPromoCode);
    document.getElementById('promo-code')?.addEventListener('keypress', (e) => {
      if ((e as KeyboardEvent).key === 'Enter') applyPromoCode();
    });
    document.getElementById('checkout-btn')?.addEventListener('click', proceedToPayment);

    // Inicializar
    renderItems();
    updateTotals();
    loadCustomerData();

    /**
     * Carga datos del Stripe Customer para autocompletar el formulario de envío.
     * Solo se ejecuta si el usuario está autenticado.
     * 
     * Flujo:
     * 1. Verificar sesión activa
     * 2. Llamar a /api/stripe/customer-data con JWT
     * 3. Rellenar campos del formulario
     * 4. Mostrar badge de "Autocompletado"
     */
    async function loadCustomerData() {
      const skeleton = document.getElementById('shipping-skeleton');
      const fields = document.getElementById('shipping-fields');
      
      try {
        const { data: { session } } = await supabase.auth.getSession();

        if (!session?.access_token) {
          // No autenticado: mostrar formulario vacío
          skeleton?.classList.add('hidden');
          fields?.classList.remove('hidden');
          return;
        }

        const res = await fetch('/api/stripe/customer-data', {
          method: 'GET',
          headers: {
            'Authorization': `Bearer ${session.access_token}`,
          },
        });

        if (!res.ok) {
          skeleton?.classList.add('hidden');
          fields?.classList.remove('hidden');
          return;
        }

        const data = await res.json();
        
        // Autocompletar campos
        let fieldsPopulated = 0;

        const setField = (id: string, value: string | null) => {
          const el = document.getElementById(id) as HTMLInputElement | HTMLSelectElement | null;
          if (el && value) {
            el.value = value;
            fieldsPopulated++;
          }
        };

        setField('ship-name', data.name);
        setField('ship-email', data.email);
        setField('ship-phone', data.phone);
        setField('ship-line1', data.address?.line1);
        setField('ship-line2', data.address?.line2);
        setField('ship-city', data.address?.city);
        setField('ship-state', data.address?.state);
        setField('ship-postal', data.address?.postal_code);
        setField('ship-country', data.address?.country);

        // Mostrar badge si se autocompletaron campos
        if (fieldsPopulated >= 2) {
          const badge = document.getElementById('autofill-badge');
          badge?.classList.remove('hidden');
        }

      } catch (err) {
        console.error('Error loading customer data:', err);
      } finally {
        // Siempre mostrar el formulario
        skeleton?.classList.add('hidden');
        fields?.classList.remove('hidden');
      }
    }
  </script>
