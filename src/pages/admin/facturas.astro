---
export const prerender = false;
import AdminLayout from '../../layouts/AdminLayout.astro';
import { createServerClient, supabaseAdmin } from '../../lib/supabase';

const supabase = await createServerClient(Astro.cookies);

// Verificar autenticación y rol admin
const { data: { session } } = await supabase.auth.getSession();
if (!session) return Astro.redirect('/auth/login');

const { data: userData } = await supabaseAdmin
  .from('users').select('role').eq('id', session.user.id).single();
if (!userData || userData.role !== 'admin') return Astro.redirect('/');

// Obtener facturas
const { data: invoices } = await supabaseAdmin
  .from('invoices')
  .select(`
    *,
    orders (
      id,
      status,
      created_at
    ),
    users (
      email,
      full_name
    )
  `)
  .order('created_at', { ascending: false })
  .limit(50);

// Calcular estadísticas del mes actual
const now = new Date();
const firstDayOfMonth = new Date(now.getFullYear(), now.getMonth(), 1).toISOString();

const monthInvoices = (invoices || []).filter(
  (inv: any) => new Date(inv.created_at) >= new Date(firstDayOfMonth)
);

const stats = {
  totalFacturado: monthInvoices
    .filter((inv: any) => inv.invoice_type === 'factura')
    .reduce((sum: number, inv: any) => sum + (inv.total || 0), 0),
  facturas: monthInvoices.filter((inv: any) => inv.invoice_type === 'factura').length,
  abonos: monthInvoices.filter((inv: any) => inv.invoice_type === 'abono').length,
  totalIva: monthInvoices.reduce((sum: number, inv: any) => sum + Math.abs(inv.tax_amount || 0), 0),
};
---

<AdminLayout title="Facturas" currentPage="facturas">
  <!-- Filtros -->
      <div class="bg-white rounded-xl shadow-sm p-6 mb-6">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Tipo</label>
            <select id="filter-type" class="w-full px-3 py-2 border border-gray-200 rounded-lg focus:ring-2 focus:ring-yellow-400">
              <option value="">Todos</option>
              <option value="factura">Facturas</option>
              <option value="abono">Abonos</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Desde</label>
            <input type="date" id="filter-from" class="w-full px-3 py-2 border border-gray-200 rounded-lg focus:ring-2 focus:ring-yellow-400" />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Hasta</label>
            <input type="date" id="filter-to" class="w-full px-3 py-2 border border-gray-200 rounded-lg focus:ring-2 focus:ring-yellow-400" />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Buscar</label>
            <input type="text" id="filter-search" placeholder="Nº factura o cliente..." class="w-full px-3 py-2 border border-gray-200 rounded-lg focus:ring-2 focus:ring-yellow-400" />
          </div>
        </div>
      </div>

      <!-- Estadísticas rápidas -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
        <div class="bg-white rounded-xl shadow-sm p-6">
          <p class="text-sm text-gray-500">Total Facturado (Mes)</p>
          <p class="text-2xl font-bold text-gray-800" id="stat-total">{stats.totalFacturado.toFixed(2)}€</p>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-6">
          <p class="text-sm text-gray-500">Facturas Emitidas</p>
          <p class="text-2xl font-bold text-green-600" id="stat-facturas">{stats.facturas}</p>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-6">
          <p class="text-sm text-gray-500">Abonos Emitidos</p>
          <p class="text-2xl font-bold text-red-600" id="stat-abonos">{stats.abonos}</p>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-6">
          <p class="text-sm text-gray-500">IVA Recaudado</p>
          <p class="text-2xl font-bold text-blue-600" id="stat-iva">{stats.totalIva.toFixed(2)}€</p>
        </div>
      </div>

      <!-- Tabla de facturas -->
      <div class="bg-white rounded-xl shadow-sm overflow-hidden">
        <table class="w-full">
          <thead class="bg-gray-50 border-b">
            <tr>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase">Nº Factura</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase">Tipo</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase">Cliente</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase">Subtotal</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase">IVA</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase">Total</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase">Fecha</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase">Acciones</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            {invoices && invoices.length > 0 ? (
              invoices.map((invoice: any) => (
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4">
                    <span class="font-mono text-sm bg-gray-100 px-2 py-1 rounded">
                      {invoice.invoice_number}
                    </span>
                  </td>
                  <td class="px-6 py-4">
                    {invoice.invoice_type === 'factura' ? (
                      <span class="px-2 py-1 bg-green-100 text-green-800 rounded-full text-xs font-medium">
                        Factura
                      </span>
                    ) : (
                      <span class="px-2 py-1 bg-red-100 text-red-800 rounded-full text-xs font-medium">
                        Abono
                      </span>
                    )}
                  </td>
                  <td class="px-6 py-4">
                    <p class="font-medium text-gray-800">{invoice.users?.full_name || 'Sin nombre'}</p>
                    <p class="text-sm text-gray-500">{invoice.users?.email || '-'}</p>
                  </td>
                  <td class="px-6 py-4">{invoice.subtotal?.toFixed(2)}€</td>
                  <td class="px-6 py-4">{invoice.tax_amount?.toFixed(2)}€</td>
                  <td class="px-6 py-4 font-bold">{invoice.total?.toFixed(2)}€</td>
                  <td class="px-6 py-4 text-sm text-gray-500">
                    {new Date(invoice.created_at).toLocaleDateString('es-ES')}
                  </td>
                  <td class="px-6 py-4">
                    <div class="flex gap-2">
                      <button 
                        class="p-2 text-blue-400 cursor-not-allowed rounded-lg"
                        title="Ver factura (próximamente)"
                        disabled
                      >
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                        </svg>
                      </button>
                      <button 
                        class="p-2 text-gray-400 cursor-not-allowed rounded-lg"
                        title="Descargar PDF (próximamente)"
                        disabled
                      >
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                      </button>
                    </div>
                  </td>
                </tr>
              ))
            ) : (
              <tr>
                <td colspan="8" class="px-6 py-12 text-center">
                  <svg class="w-16 h-16 mx-auto mb-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                  <p class="text-gray-500">No hay facturas todavía</p>
                </td>
              </tr>
            )}
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <script>
    // Filtrado client-side de la tabla
    const filterType = document.getElementById('filter-type') as HTMLSelectElement;
    const filterSearch = document.getElementById('filter-search') as HTMLInputElement;
    const filterFrom = document.getElementById('filter-from') as HTMLInputElement;
    const filterTo = document.getElementById('filter-to') as HTMLInputElement;
    const rows = document.querySelectorAll('tbody tr');

    function applyFilters() {
      const type = filterType?.value || '';
      const search = filterSearch?.value?.toLowerCase() || '';
      const from = filterFrom?.value ? new Date(filterFrom.value) : null;
      const to = filterTo?.value ? new Date(filterTo.value + 'T23:59:59') : null;

      rows.forEach(row => {
        const cells = row.querySelectorAll('td');
        if (cells.length < 7) return; // skip empty state row
        
        const invoiceNum = cells[0]?.textContent?.toLowerCase() || '';
        const invoiceType = cells[1]?.textContent?.trim().toLowerCase() || '';
        const client = cells[2]?.textContent?.toLowerCase() || '';
        const dateStr = cells[6]?.textContent?.trim() || '';
        
        let show = true;
        
        // Filtro por tipo
        if (type && !invoiceType.includes(type)) show = false;
        
        // Filtro por búsqueda
        if (search && !invoiceNum.includes(search) && !client.includes(search)) show = false;
        
        // Filtro por fecha
        if (from || to) {
          const parts = dateStr.split('/');
          if (parts.length === 3) {
            const rowDate = new Date(`${parts[2]}-${parts[1]}-${parts[0]}`);
            if (from && rowDate < from) show = false;
            if (to && rowDate > to) show = false;
          }
        }
        
        (row as HTMLElement).style.display = show ? '' : 'none';
      });
    }

    filterType?.addEventListener('change', applyFilters);
    filterSearch?.addEventListener('input', applyFilters);
    filterFrom?.addEventListener('change', applyFilters);
    filterTo?.addEventListener('change', applyFilters);

    // Exportar CSV
    document.getElementById('export-btn')?.addEventListener('click', () => {
      const csvRows: string[] = ['Nº Factura,Tipo,Cliente,Email,Subtotal,IVA,Total,Fecha'];
      rows.forEach(row => {
        const cells = row.querySelectorAll('td');
        if (cells.length < 7) return;
        csvRows.push([
          cells[0]?.textContent?.trim() || '',
          cells[1]?.textContent?.trim() || '',
          cells[2]?.querySelector('p')?.textContent?.trim() || '',
          cells[2]?.querySelectorAll('p')[1]?.textContent?.trim() || '',
          cells[3]?.textContent?.trim() || '',
          cells[4]?.textContent?.trim() || '',
          cells[5]?.textContent?.trim() || '',
          cells[6]?.textContent?.trim() || '',
        ].map(v => `"${String(v).replace(/"/g, '""')}"`).join(','));
      });
      const blob = new Blob([csvRows.join('\n')], { type: 'text/csv;charset=utf-8;' });
      const link = document.createElement('a');
      link.href = URL.createObjectURL(blob);
      link.download = `facturas-${new Date().toISOString().slice(0, 10)}.csv`;
      link.click();
    });
  </script>
</AdminLayout>
