---
import Layout from '../../layouts/Layout.astro';
import AddressAutocomplete from '../../components/AddressAutocomplete.tsx';
---

<Layout title="Registro">
  <div class="max-w-md mx-auto px-4 py-12">
    <div class="card">
      <!-- Branding -->
      <div class="text-center mb-6">
        <a href="/" class="inline-flex items-center gap-2 mb-4">
          <svg class="w-10 h-10 text-purple-700" viewBox="0 0 64 64" fill="currentColor">
            <path d="M32 8c-4 0-7.5 2-9 5-1.5-3-5-5-9-5-6 0-10 4-10 10 0 8 8 16 19 25 11-9 19-17 19-25 0-6-4-10-10-10z"></path>
            <ellipse cx="20" cy="28" rx="3" ry="4" fill="white"></ellipse>
            <ellipse cx="44" cy="28" rx="3" ry="4" fill="white"></ellipse>
          </svg>
          <span class="text-2xl font-bold bg-gradient-to-r from-purple-700 to-orange-500 bg-clip-text text-transparent">Benice</span>
        </a>
        <h1 class="text-3xl font-bold">Crear Cuenta</h1>
        <p class="text-gray-500 mt-1">√önete a la familia Benice</p>
      </div>
      
      <form id="register-form">
        <div class="mb-4">
          <label class="block text-sm font-medium mb-2">Nombre Completo</label>
          <input
            type="text"
            id="full-name"
            required
            class="input"
            placeholder="Juan P√©rez"
          />
        </div>

        <div class="mb-4">
          <label class="block text-sm font-medium mb-2">Email</label>
          <input
            type="email"
            id="email"
            required
            class="input"
            placeholder="tu@email.com"
          />
        </div>

        <div class="mb-4">
          <label class="block text-sm font-medium mb-2">Tel√©fono</label>
          <input
            type="tel"
            id="phone"
            class="input"
            placeholder="600 123 456"
          />
        </div>

        <div class="mb-4">
          <AddressAutocomplete
            client:load
            id="address"
            label="Direcci√≥n"
            sublabel={null}
            labelClassName="block text-sm font-medium mb-2"
            placeholder="Calle, n√∫mero, ciudad, CP"
            className=""
            fieldIds={{
              line1: 'reg-line1',
              line2: 'reg-line2',
              city: 'reg-city',
              state: 'reg-state',
              postalCode: 'reg-postal',
              country: 'reg-country',
              lat: 'reg-lat',
              lng: 'reg-lng',
            }}
          />
          <!-- Campos de direcci√≥n: ocultos por defecto, se muestran autom√°ticamente si falla el autocompletado -->
          <div id="manual-address-fields" class="hidden mt-3 space-y-3 p-3 bg-gray-50 rounded-lg border border-gray-200">
            <p class="text-xs text-gray-500 mb-1">Completa tu direcci√≥n manualmente:</p>
            <div>
              <label for="reg-line1" class="block text-xs font-medium text-gray-600 mb-1">Calle y n√∫mero *</label>
              <input type="text" id="reg-line1" placeholder="Ej: Calle Mayor, 10" class="input text-sm" />
            </div>
            <div>
              <label for="reg-line2" class="block text-xs font-medium text-gray-600 mb-1">Piso / puerta (opcional)</label>
              <input type="text" id="reg-line2" placeholder="Ej: 2¬∫B" class="input text-sm" />
            </div>
            <div class="grid grid-cols-2 gap-3">
              <div>
                <label for="reg-city" class="block text-xs font-medium text-gray-600 mb-1">Ciudad *</label>
                <input type="text" id="reg-city" placeholder="Madrid" class="input text-sm" />
              </div>
              <div>
                <label for="reg-state" class="block text-xs font-medium text-gray-600 mb-1">Provincia</label>
                <input type="text" id="reg-state" placeholder="Madrid" class="input text-sm" />
              </div>
            </div>
            <div class="grid grid-cols-2 gap-3">
              <div>
                <label for="reg-postal" class="block text-xs font-medium text-gray-600 mb-1">C√≥digo postal *</label>
                <input type="text" id="reg-postal" placeholder="28001" maxlength="10" class="input text-sm" />
              </div>
              <div>
                <label for="reg-country" class="block text-xs font-medium text-gray-600 mb-1">Pa√≠s</label>
                <select id="reg-country" class="input text-sm">
                  <option value="ES" selected>Espa√±a</option>
                </select>
              </div>
            </div>
          </div>
          <input type="hidden" id="reg-lat" />
          <input type="hidden" id="reg-lng" />
        </div>
        
        <div class="mb-4">
          <label class="block text-sm font-medium mb-2">Contrase√±a</label>
          <div class="relative">
            <input
              type="password"
              id="password"
              required
              minlength="8"
              class="input pr-12"
              placeholder="M√≠nimo 8 caracteres"
            />
            <button type="button" id="toggle-password" class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600 transition-colors" aria-label="Mostrar contrase√±a">
              <svg class="w-5 h-5 toggle-eye" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
              <svg class="w-5 h-5 toggle-eye-off hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
              </svg>
            </button>
          </div>
          <!-- Indicador de fuerza -->
          <div class="mt-2 h-1.5 bg-gray-200 rounded-full overflow-hidden">
            <div id="password-strength" class="h-full rounded-full transition-all duration-300 w-0"></div>
          </div>
          <p id="password-hint" class="text-xs text-gray-400 mt-1">Usa al menos 8 caracteres con may√∫sculas, n√∫meros y s√≠mbolos</p>
        </div>

        <div class="mb-4">
          <label class="block text-sm font-medium mb-2">Confirmar Contrase√±a</label>
          <input
            type="password"
            id="confirm-password"
            required
            class="input"
            placeholder="Repite tu contrase√±a"
          />
        </div>

        <!-- GDPR Checkbox -->
        <div class="mb-6">
          <label class="flex items-start gap-2 cursor-pointer">
            <input type="checkbox" id="gdpr-consent" required class="mt-1 w-4 h-4 rounded border-gray-300 text-purple-500 focus:ring-purple-400" />
            <span class="text-sm text-gray-600">
              Acepto la <a href="/legal/privacidad" class="text-purple-600 hover:underline">Pol√≠tica de Privacidad</a> 
              y los <a href="/legal/terminos" class="text-purple-600 hover:underline">T√©rminos y Condiciones</a>. *
            </span>
          </label>
        </div>

        <div id="error-message" class="hidden mb-4 p-3 bg-red-100 text-red-700 rounded-lg text-sm"></div>
        <div id="success-message" class="hidden mb-4 p-3 bg-green-100 text-green-700 rounded-lg text-sm"></div>

        <button type="submit" class="btn btn-primary w-full mb-4">
          Crear Cuenta
        </button>
      </form>

      <p class="text-center text-gray-600 text-sm">
        ¬øYa tienes cuenta? 
        <a href="/auth/login" class="text-purple-600 hover:underline font-medium">Inicia sesi√≥n</a>
      </p>
    </div>
  </div>

  <script>
    import { supabase } from '../../lib/supabase';

    // Mostrar campos manuales si falla el autocompletado de direcci√≥n
    window.addEventListener('address-details-failed', () => {
      const manualFields = document.getElementById('manual-address-fields');
      if (manualFields) manualFields.classList.remove('hidden');
    });

    // Password toggle
    const toggleBtn = document.getElementById('toggle-password');
    const passwordInput = document.getElementById('password') as HTMLInputElement;
    
    toggleBtn?.addEventListener('click', () => {
      const isPassword = passwordInput?.type === 'password';
      if (passwordInput) passwordInput.type = isPassword ? 'text' : 'password';
      toggleBtn.querySelector('.toggle-eye')?.classList.toggle('hidden');
      toggleBtn.querySelector('.toggle-eye-off')?.classList.toggle('hidden');
    });

    // Password strength indicator
    const strengthBar = document.getElementById('password-strength');
    const strengthHint = document.getElementById('password-hint');
    
    passwordInput?.addEventListener('input', () => {
      const val = passwordInput.value;
      let score = 0;
      if (val.length >= 8) score++;
      if (/[A-Z]/.test(val)) score++;
      if (/[0-9]/.test(val)) score++;
      if (/[^A-Za-z0-9]/.test(val)) score++;
      
      const colors = ['bg-red-500', 'bg-orange-500', 'bg-yellow-500', 'bg-green-500'];
      const widths = ['w-1/4', 'w-2/4', 'w-3/4', 'w-full'];
      const labels = ['D√©bil', 'Regular', 'Buena', 'Fuerte'];
      
      if (strengthBar) {
        strengthBar.className = `h-full rounded-full transition-all duration-300 ${val.length === 0 ? 'w-0' : widths[score - 1] || 'w-0'} ${colors[score - 1] || 'bg-red-500'}`;
      }
      if (strengthHint && val.length > 0) {
        strengthHint.textContent = `Seguridad: ${labels[score - 1] || 'Muy d√©bil'}`;
      }
    });

    const form = document.getElementById('register-form');
    const errorMessage = document.getElementById('error-message');
    const successMessage = document.getElementById('success-message');

    console.log('üü¢ [REGISTRO] P√°gina cargada. Formulario encontrado:', !!form);

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();

      const fullName = (document.getElementById('full-name') as HTMLInputElement).value;
      const email = (document.getElementById('email') as HTMLInputElement).value;
      const phone = (document.getElementById('phone') as HTMLInputElement).value;
      const address = (document.getElementById('address') as HTMLInputElement).value;
      const password = (document.getElementById('password') as HTMLInputElement).value;
      const confirmPassword = (document.getElementById('confirm-password') as HTMLInputElement).value;

      // Campos estructurados rellenados por AddressAutocomplete
      const addressLine1 = (document.getElementById('reg-line1') as HTMLInputElement)?.value || '';
      const addressLine2 = (document.getElementById('reg-line2') as HTMLInputElement)?.value || '';
      const city = (document.getElementById('reg-city') as HTMLInputElement)?.value || '';
      const state = (document.getElementById('reg-state') as HTMLInputElement)?.value || '';
      const postalCode = (document.getElementById('reg-postal') as HTMLInputElement)?.value || '';
      const country = (document.getElementById('reg-country') as HTMLInputElement)?.value || 'ES';
      const latitude = parseFloat((document.getElementById('reg-lat') as HTMLInputElement)?.value) || null;
      const longitude = parseFloat((document.getElementById('reg-lng') as HTMLInputElement)?.value) || null;

      // Validar contrase√±as
      if (password !== confirmPassword) {
        errorMessage!.textContent = 'Las contrase√±as no coinciden';
        errorMessage!.classList.remove('hidden');
        successMessage!.classList.add('hidden');
        return;
      }

      try {
        const { data, error } = await supabase.auth.signUp({
          email,
          password,
          options: {
            data: {
              full_name: fullName,
            },
            emailRedirectTo: undefined
          }
        });

        if (error) throw error;

        // Supabase v2: si el email ya existe y no est√° confirmado,
        // devuelve user con identities vac√≠o (sin error) para evitar enumeraci√≥n.
        if (data.user && data.user.identities && data.user.identities.length === 0) {
          errorMessage!.textContent = 'Este email ya est√° registrado. Revisa tu correo o inicia sesi√≥n.';
          errorMessage!.classList.remove('hidden');
          successMessage!.classList.add('hidden');
          return;
        }

        // Crear perfil de usuario (rol 'user' por defecto)
        if (data.user) {
          const profileData = {
            id: data.user.id,
            email: email,
            full_name: fullName,
            phone: phone || null,
            address: address || null,
            address_line1: addressLine1 || null,
            address_line2: addressLine2 || null,
            city: city || null,
            state: state || null,
            postal_code: postalCode || null,
            country: country || 'ES',
            latitude: latitude,
            longitude: longitude,
            role: 'user',
            created_at: new Date().toISOString()
          };

          const { error: insertError } = await supabase.from('users').insert(profileData);

          if (insertError) {
            console.error('[REGISTRO] Error insertando perfil:', insertError.message);
            // Fallback: crear perfil via ensure-profile (usa service_role, no tiene restricciones RLS)
            if (data.session) {
              try {
                await fetch('/api/auth/ensure-profile', {
                  method: 'POST',
                  headers: { 'Authorization': `Bearer ${data.session.access_token}` },
                });
              } catch {}
            }
          }
        }

        // Si hay sesion, el usuario ya esta autenticado
        if (data.session) {
          // Guardar tokens en cookies HttpOnly v√≠a servidor (igual que login)
          try {
            const res = await fetch('/api/auth/session', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({
                access_token: data.session.access_token,
                refresh_token: data.session.refresh_token,
              }),
            });
            if (!res.ok) {
              console.error('[REGISTRO] Error guardando sesi√≥n:', res.status);
            }
          } catch (e) {
            console.error('[REGISTRO] Error guardando sesi√≥n:', e);
          }

          successMessage!.textContent = 'Cuenta creada. Redirigiendo...';
          successMessage!.classList.remove('hidden');
          errorMessage!.classList.add('hidden');
          setTimeout(() => {
            window.location.href = '/';
          }, 1500);
        } else {
          // Si no hay sesion, requiere verificacion (mostrar mensaje)
          successMessage!.innerHTML = 'Cuenta creada. <strong>Revisa tu correo</strong> para activarla.';
          successMessage!.classList.remove('hidden');
          errorMessage!.classList.add('hidden');
        }
      } catch (error: any) {
        // Mapear mensajes de Supabase a mensajes amigables
        const msg = (error?.message || '').toLowerCase();
        let userMsg = 'Error al crear la cuenta. Int√©ntalo de nuevo.';
        if (msg.includes('already registered') || msg.includes('already been registered') || msg.includes('unique constraint')) {
          userMsg = 'Este email ya est√° registrado';
        } else if (msg.includes('valid email') || msg.includes('invalid email')) {
          userMsg = 'Introduce un email v√°lido';
        } else if (msg.includes('password') || msg.includes('weak')) {
          userMsg = 'La contrase√±a debe tener al menos 8 caracteres';
        } else if (msg.includes('rate') || msg.includes('limit') || msg.includes('too many')) {
          userMsg = 'Demasiados intentos. Espera unos minutos e int√©ntalo de nuevo.';
        } else if (msg.includes('network') || msg.includes('fetch')) {
          userMsg = 'Error de conexi√≥n. Comprueba tu internet e int√©ntalo de nuevo.';
        }
        errorMessage!.textContent = userMsg;
        errorMessage!.classList.remove('hidden');
        successMessage!.classList.add('hidden');
      }
    });
  </script>
</Layout>

