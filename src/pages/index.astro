    // Hero Carousel
    function initHeroCarousel() {
      const slides = document.querySelectorAll('.hero-slide');
      const dots = document.querySelectorAll('.hero-dot');
      const prevBtn = document.getElementById('hero-prev');
      const nextBtn = document.getElementById('hero-next');
      
      if (slides.length === 0) return;
      
      let currentSlide = 0;
      let autoplayInterval: number;
      
      function goToSlide(index: number) {
        // Ocultar slide actual
        slides[currentSlide].classList.remove('opacity-100', 'translate-x-0');
        slides[currentSlide].classList.add('opacity-0', '-translate-x-full');
        dots[currentSlide].classList.remove('bg-white/90');
        dots[currentSlide].classList.add('bg-white/50');
        
        // Preparar nuevo slide
        currentSlide = index;
        if (currentSlide >= slides.length) currentSlide = 0;
        if (currentSlide < 0) currentSlide = slides.length - 1;
        
        slides[currentSlide].classList.remove('opacity-0', '-translate-x-full', 'translate-x-full');
        slides[currentSlide].classList.add('translate-x-full');
        
        setTimeout(() => {
          slides[currentSlide].classList.remove('translate-x-full');
          slides[currentSlide].classList.add('opacity-100', 'translate-x-0');
        }, 50);
        
        dots[currentSlide].classList.remove('bg-white/50');
        dots[currentSlide].classList.add('bg-white/90');
      }
      
      function nextSlide() {
        goToSlide(currentSlide + 1);
      }
      
      function prevSlide() {
        goToSlide(currentSlide - 1);
      }
      
      function startAutoplay() {
        autoplayInterval = window.setInterval(nextSlide, 3000);
      }
      
      function stopAutoplay() {
        clearInterval(autoplayInterval);
      }
      
      // Event listeners
      nextBtn?.addEventListener('click', () => {
        stopAutoplay();
        nextSlide();
        startAutoplay();
      });
      
      prevBtn?.addEventListener('click', () => {
        stopAutoplay();
        prevSlide();
        startAutoplay();
      });
      
      dots.forEach((dot, index) => {
        dot.addEventListener('click', () => {
          stopAutoplay();
          goToSlide(index);
          startAutoplay();
        });
      });
      
      // Iniciar autoplay
      startAutoplay();
    }
    
    // Price Range Slider
    function initPriceSlider() {
      const minSlider = document.getElementById('price-min') as HTMLInputElement;
      const maxSlider = document.getElementById('price-max') as HTMLInputElement;
      const minInput = document.getElementById('price-min-input') as HTMLInputElement;
      const maxInput = document.getElementById('price-max-input') as HTMLInputElement;
      const minLabel = document.getElementById('price-min-label');
      const maxLabel = document.getElementById('price-max-label');
      const track = document.getElementById('price-range-track');
      
      if (!minSlider || !maxSlider) return;
      
      function updateTrack() {
        const min = parseInt(minSlider.value);
        const max = parseInt(maxSlider.value);
        const maxVal = parseInt(minSlider.max);
        
        const leftPercent = (min / maxVal) * 100;
        const rightPercent = 100 - (max / maxVal) * 100;
        
        if (track) {
          track.style.left = leftPercent + '%';
          track.style.right = rightPercent + '%';
        }
        
        if (minLabel) minLabel.textContent = min + '€';
        if (maxLabel) maxLabel.textContent = max + '€';
        if (minInput) minInput.value = String(min);
        if (maxInput) maxInput.value = String(max);
      }
      
      minSlider.addEventListener('input', () => {
        if (parseInt(minSlider.value) > parseInt(maxSlider.value)) {
          minSlider.value = maxSlider.value;
        }
        updateTrack();
      });
      
      maxSlider.addEventListener('input', () => {
        if (parseInt(maxSlider.value) < parseInt(minSlider.value)) {
          maxSlider.value = minSlider.value;
        }
        updateTrack();
      });
      
      minInput?.addEventListener('change', () => {
        let val = parseInt(minInput.value) || 0;
        if (val > parseInt(maxSlider.value)) val = parseInt(maxSlider.value);
        if (val < 0) val = 0;
        minSlider.value = String(val);
        updateTrack();
        applyFiltersAndSort();
      });
      
      maxInput?.addEventListener('change', () => {
        let val = parseInt(maxInput.value) || 200;
        if (val < parseInt(minSlider.value)) val = parseInt(minSlider.value);
        if (val > 200) val = 200;
        maxSlider.value = String(val);
        updateTrack();
        applyFiltersAndSort();
      });
      
      updateTrack();
    }
    
    // === FILTRADO DE PRODUCTOS ===
    function getActiveFilters(): Record<string, string[]> {
      const filters: Record<string, string[]> = {};
      document.querySelectorAll('.filter-checkbox:checked').forEach((cb) => {
        const input = cb as HTMLInputElement;
        const group = input.dataset.filterGroup;
        const value = input.dataset.value;
        if (group && value) {
          if (!filters[group]) filters[group] = [];
          filters[group].push(value.toLowerCase());
        }
      });
      return filters;
    }

    function getProductPrice(product: any): number {
      return (product.on_sale && product.sale_price) ? product.sale_price : product.price;
    }

    function applyFiltersAndSort() {
      const filters = getActiveFilters();
      const priceMin = parseInt((document.getElementById('price-min') as HTMLInputElement)?.value || '0');
      const priceMax = parseInt((document.getElementById('price-max') as HTMLInputElement)?.value || '200');
      const sortValue = (document.getElementById('sort-select') as HTMLSelectElement)?.value || 'precio-asc';

      const cards = document.querySelectorAll('.product-card') as NodeListOf<HTMLElement>;
      const grid = cards[0]?.parentElement;
      if (!grid) return;

      // Recoger datos de cards y filtrar
      const cardEntries: { el: HTMLElement; product: any }[] = [];
      cards.forEach((card) => {
        const raw = card.getAttribute('data-product');
        if (!raw) return;
        const product = JSON.parse(raw);
        cardEntries.push({ el: card, product });
      });

      let visible = 0;
      cardEntries.forEach(({ el, product }) => {
        let show = true;

        // Filtros de checkbox (animal_type, category, age_range, size)
        for (const [group, values] of Object.entries(filters)) {
          if (group === 'on_sale') {
            // Filtro especial: solo ofertas
            if (values.includes('true') && !product.on_sale) {
              show = false;
            }
          } else {
            const productValue = (product[group] || '').toLowerCase();
            if (!values.includes(productValue)) {
              show = false;
            }
          }
        }

        // Filtro de precio
        const price = getProductPrice(product);
        if (price < priceMin || price > priceMax) {
          show = false;
        }

        el.style.display = show ? '' : 'none';
        if (show) visible++;
      });

      // Ordenar las cards visibles
      const sorted = cardEntries
        .filter(({ el }) => el.style.display !== 'none')
        .sort((a, b) => {
          const priceA = getProductPrice(a.product);
          const priceB = getProductPrice(b.product);
          switch (sortValue) {
            case 'precio-asc': return priceA - priceB;
            case 'precio-desc': return priceB - priceA;
            case 'nombre': return (a.product.name || '').localeCompare(b.product.name || '');
            case 'reciente': return new Date(b.product.created_at).getTime() - new Date(a.product.created_at).getTime();
            default: return 0;
          }
        });

      // Reordenar en el DOM
      sorted.forEach(({ el }) => grid.appendChild(el));
      // Mover las ocultas al final
      cardEntries.filter(({ el }) => el.style.display === 'none').forEach(({ el }) => grid.appendChild(el));

      // Actualizar contador
      const countEl = document.getElementById('results-count');
      if (countEl) countEl.textContent = String(visible);
    }

    // Escuchar cambios en filtros
    document.querySelectorAll('.filter-checkbox').forEach((cb) => {
      cb.addEventListener('change', applyFiltersAndSort);
    });

    // Escuchar cambios en ordenar
    document.getElementById('sort-select')?.addEventListener('change', applyFiltersAndSort);

    // Escuchar cambios en precio (con debounce)
    let priceFilterTimeout: number;
    ['price-min', 'price-max'].forEach(id => {
      document.getElementById(id)?.addEventListener('input', () => {
        clearTimeout(priceFilterTimeout);
        priceFilterTimeout = window.setTimeout(applyFiltersAndSort, 300);
      });
    });
    ['price-min-input', 'price-max-input'].forEach(id => {
      document.getElementById(id)?.addEventListener('change', applyFiltersAndSort);
    });

    // Inicializar todo
    initHeroCarousel();
    initPriceSlider();

    // Botón limpiar filtros
    document.getElementById('clear-all-filters')?.addEventListener('click', () => {
      document.querySelectorAll('.filter-checkbox:checked').forEach((cb) => {
        (cb as HTMLInputElement).checked = false;
      });
      const minSlider = document.getElementById('price-min') as HTMLInputElement;
      const maxSlider = document.getElementById('price-max') as HTMLInputElement;
      if (minSlider) minSlider.value = '0';
      if (maxSlider) maxSlider.value = '200';
      initPriceSlider();
      applyFiltersAndSort();
    });
  </script>

