---
import Layout from '../layouts/Layout.astro';
import OfertasFlash from '../components/OfertasFlash.astro';
import { supabase } from '../lib/supabase';

// Obtener productos
const { data: products, count: totalProducts } = await supabase
  .from('products')
  .select('*', { count: 'exact' })
  .order('created_at', { ascending: false });

const hasProducts = products && products.length > 0;
---

<Layout title="Inicio" description="Benice Pet Shop - La mejor tienda online de productos para mascotas. Envío gratis en pedidos +49€. Alimentación, juguetes, accesorios y más.">
  <div class="bg-white min-h-screen">
    
    <!-- Hero Carousel Premium -->
    <section aria-label="Carrusel principal" class="relative h-[32rem] md:h-[36rem] overflow-hidden bg-gray-900">
      <div id="hero-slider" class="relative h-full">
        <!-- Slide 1: Perros -->
        <div class="hero-slide absolute inset-0 opacity-100 transition-all duration-700 ease-in-out" data-slide="0">
          <img src="/images/hero/perros.jpg" alt="Productos para perros" class="w-full h-full object-cover" loading="eager" decoding="async" onerror="this.src='https://images.unsplash.com/photo-1587300003388-59208cc962cb?w=1400&h=600&fit=crop&q=80'">
          <div class="absolute inset-0 bg-gradient-to-r from-gray-900/80 via-gray-900/50 to-transparent"></div>
          <div class="absolute inset-0 bg-gradient-to-t from-gray-900/40 to-transparent"></div>
          <div class="absolute inset-0 flex items-center">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
              <div class="max-w-xl">
                <div class="inline-flex items-center gap-2 bg-orange-500/20 backdrop-blur-md border border-orange-400/30 rounded-full px-4 py-1.5 text-sm text-orange-200 mb-6 animate-fade-in">
                  <span class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></span>
                  Novedades disponibles
                </div>
                <h2 class="text-4xl md:text-6xl font-extrabold text-white mb-4 leading-tight">
                  Todo para tu
                  <span class="bg-gradient-to-r from-orange-400 to-orange-300 bg-clip-text text-transparent"> Perro</span>
                </h2>
                <p class="text-gray-300 text-lg md:text-xl mb-8 max-w-md leading-relaxed">
                  Los mejores productos para el cuidado, alimentación y diversión de tu mejor amigo.
                </p>
                <div class="flex flex-wrap gap-4">
                  <a href="/animales/perros" class="group inline-flex items-center gap-2 bg-orange-500 hover:bg-orange-600 text-white font-bold py-3.5 px-8 rounded-full transition-all shadow-lg shadow-orange-500/25 hover:shadow-orange-500/40 hover:-translate-y-0.5">
                    Ver productos
                    <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
                  </a>
                  <a href="/ofertas" class="inline-flex items-center gap-2 bg-white/10 hover:bg-white/20 backdrop-blur-sm text-white font-semibold py-3.5 px-8 rounded-full transition-all border border-white/20">
                    Ver ofertas
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Slide 2: Gatos -->
        <div class="hero-slide absolute inset-0 opacity-0 translate-x-full transition-all duration-700 ease-in-out" data-slide="1">
          <img src="/images/hero/gatos.jpg" alt="Productos para gatos" class="w-full h-full object-cover" loading="lazy" decoding="async" onerror="this.src='https://images.unsplash.com/photo-1514888286974-6c03e2ca1dba?w=1400&h=600&fit=crop&q=80'">
          <div class="absolute inset-0 bg-gradient-to-r from-gray-900/80 via-gray-900/50 to-transparent"></div>
          <div class="absolute inset-0 bg-gradient-to-t from-gray-900/40 to-transparent"></div>
          <div class="absolute inset-0 flex items-center">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
              <div class="max-w-xl">
                <div class="inline-flex items-center gap-2 bg-purple-500/20 backdrop-blur-md border border-purple-400/30 rounded-full px-4 py-1.5 text-sm text-purple-200 mb-6">
                  <span class="w-2 h-2 bg-purple-400 rounded-full animate-pulse"></span>
                  Alimentación premium
                </div>
                <h2 class="text-4xl md:text-6xl font-extrabold text-white mb-4 leading-tight">
                  Mima a tu
                  <span class="bg-gradient-to-r from-purple-400 to-purple-300 bg-clip-text text-transparent"> Gato</span>
                </h2>
                <p class="text-gray-300 text-lg md:text-xl mb-8 max-w-md leading-relaxed">
                  Alimentación premium y accesorios para felinos exigentes que se merecen lo mejor.
                </p>
                <div class="flex flex-wrap gap-4">
                  <a href="/animales/gatos" class="group inline-flex items-center gap-2 bg-purple-600 hover:bg-purple-700 text-white font-bold py-3.5 px-8 rounded-full transition-all shadow-lg shadow-purple-600/25 hover:shadow-purple-600/40 hover:-translate-y-0.5">
                    Descubrir
                    <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Slide 3: Ofertas -->
        <div class="hero-slide absolute inset-0 opacity-0 translate-x-full transition-all duration-700 ease-in-out" data-slide="2">
          <img src="/images/hero/favoritos.jpg" alt="Ofertas especiales" class="w-full h-full object-cover" loading="lazy" decoding="async" onerror="this.src='https://images.unsplash.com/photo-1450778869180-41d0601e046e?w=1400&h=600&fit=crop&q=80'">
          <div class="absolute inset-0 bg-gradient-to-r from-gray-900/80 via-gray-900/50 to-transparent"></div>
          <div class="absolute inset-0 bg-gradient-to-t from-gray-900/40 to-transparent"></div>
          <div class="absolute inset-0 flex items-center">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
              <div class="max-w-xl">
                <div class="inline-flex items-center gap-2 bg-red-500/20 backdrop-blur-md border border-red-400/30 rounded-full px-4 py-1.5 text-sm text-red-200 mb-6">
                  <svg class="w-4 h-4 text-red-400" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd"/></svg>
                  Hasta -30% de descuento
                </div>
                <h2 class="text-4xl md:text-6xl font-extrabold text-white mb-4 leading-tight">
                  Ofertas
                  <span class="bg-gradient-to-r from-red-400 to-orange-400 bg-clip-text text-transparent"> Exclusivas</span>
                </h2>
                <p class="text-gray-300 text-lg md:text-xl mb-8 max-w-md leading-relaxed">
                  Descuentos increíbles en los productos favoritos de tu mascota. ¡No te los pierdas!
                </p>
                <div class="flex flex-wrap gap-4">
                  <a href="/ofertas" class="group inline-flex items-center gap-2 bg-red-500 hover:bg-red-600 text-white font-bold py-3.5 px-8 rounded-full transition-all shadow-lg shadow-red-500/25 hover:shadow-red-500/40 hover:-translate-y-0.5">
                    Ver ofertas
                    <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Controles del carousel -->
      <button id="hero-prev" aria-label="Diapositiva anterior" class="absolute left-4 top-1/2 -translate-y-1/2 w-12 h-12 bg-white/10 hover:bg-white/20 backdrop-blur-md rounded-full shadow-lg flex items-center justify-center transition-all hover:scale-110 z-10 border border-white/10">
        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      </button>
      <button id="hero-next" aria-label="Siguiente diapositiva" class="absolute right-4 top-1/2 -translate-y-1/2 w-12 h-12 bg-white/10 hover:bg-white/20 backdrop-blur-md rounded-full shadow-lg flex items-center justify-center transition-all hover:scale-110 z-10 border border-white/10">
        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </button>
      
      <!-- Indicadores Premium -->
      <div class="absolute bottom-6 left-1/2 -translate-x-1/2 flex gap-2.5 z-10" role="tablist" aria-label="Indicadores del carrusel">
        <button class="hero-dot w-8 h-1.5 rounded-full bg-white/90 transition-all" data-dot="0" aria-label="Ir a diapositiva 1" role="tab" aria-selected="true"></button>
        <button class="hero-dot w-8 h-1.5 rounded-full bg-white/30 transition-all hover:bg-white/50" data-dot="1" aria-label="Ir a diapositiva 2" role="tab" aria-selected="false"></button>
        <button class="hero-dot w-8 h-1.5 rounded-full bg-white/30 transition-all hover:bg-white/50" data-dot="2" aria-label="Ir a diapositiva 3" role="tab" aria-selected="false"></button>
      </div>
    </section>

    <!-- Beneficios Banner -->
    <section class="relative -mt-8 z-10 mb-4">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white rounded-2xl shadow-xl border border-gray-100 grid grid-cols-2 md:grid-cols-4 divide-x divide-gray-100">
          <div class="flex items-center gap-3 p-5 md:p-6">
            <div class="w-11 h-11 bg-purple-100 rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/></svg>
            </div>
            <div>
              <p class="font-bold text-gray-900 text-sm">Envío Gratis</p>
              <p class="text-xs text-gray-500">Pedidos +49€</p>
            </div>
          </div>
          <div class="flex items-center gap-3 p-5 md:p-6">
            <div class="w-11 h-11 bg-orange-100 rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
            </div>
            <div>
              <p class="font-bold text-gray-900 text-sm">Entrega 24-48h</p>
              <p class="text-xs text-gray-500">Toda España</p>
            </div>
          </div>
          <div class="flex items-center gap-3 p-5 md:p-6">
            <div class="w-11 h-11 bg-green-100 rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
            </div>
            <div>
              <p class="font-bold text-gray-900 text-sm">Pago Seguro</p>
              <p class="text-xs text-gray-500">SSL + Stripe</p>
            </div>
          </div>
          <div class="flex items-center gap-3 p-5 md:p-6">
            <div class="w-11 h-11 bg-blue-100 rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg>
            </div>
            <div>
              <p class="font-bold text-gray-900 text-sm">30 días</p>
              <p class="text-xs text-gray-500">Devoluciones</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Sección de Ofertas Flash -->
    <OfertasFlash />

    <!-- Compra por Mascota -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-10">
          <h2 class="text-3xl md:text-4xl font-extrabold text-gray-900">
            Compra por <span class="bg-gradient-to-r from-purple-600 to-orange-500 bg-clip-text text-transparent">mascota</span>
          </h2>
          <p class="text-gray-500 mt-3 text-lg max-w-lg mx-auto">Todo lo que necesita tu compañero, en un solo lugar</p>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 md:gap-6 max-w-4xl mx-auto">
          <a href="/animales/perros" class="group relative rounded-2xl overflow-hidden aspect-[3/4] shadow-md hover:shadow-2xl transition-all duration-500 hover:-translate-y-1">
            <img src="https://images.unsplash.com/photo-1587300003388-59208cc962cb?w=400&h=500&fit=crop&q=80" alt="Perros" class="absolute inset-0 w-full h-full object-cover group-hover:scale-110 transition-transform duration-700" loading="lazy" />
            <div class="absolute inset-0 bg-gradient-to-t from-gray-900/80 via-gray-900/20 to-transparent"></div>
            <div class="absolute bottom-0 left-0 right-0 p-5">
              <h3 class="text-white text-xl font-bold">Perros</h3>
              <p class="text-white/70 text-sm mt-1">Alimentación, juguetes y más</p>
              <div class="flex items-center gap-1 mt-3 text-orange-400 text-sm font-medium group-hover:gap-2 transition-all">
                Ver productos
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
              </div>
            </div>
          </a>
          <a href="/animales/gatos" class="group relative rounded-2xl overflow-hidden aspect-[3/4] shadow-md hover:shadow-2xl transition-all duration-500 hover:-translate-y-1">
            <img src="https://images.unsplash.com/photo-1514888286974-6c03e2ca1dba?w=400&h=500&fit=crop&q=80" alt="Gatos" class="absolute inset-0 w-full h-full object-cover group-hover:scale-110 transition-transform duration-700" loading="lazy" />
            <div class="absolute inset-0 bg-gradient-to-t from-gray-900/80 via-gray-900/20 to-transparent"></div>
            <div class="absolute bottom-0 left-0 right-0 p-5">
              <h3 class="text-white text-xl font-bold">Gatos</h3>
              <p class="text-white/70 text-sm mt-1">Premium para felinos exigentes</p>
              <div class="flex items-center gap-1 mt-3 text-purple-400 text-sm font-medium group-hover:gap-2 transition-all">
                Ver productos
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
              </div>
            </div>
          </a>
          <a href="/productos" class="group relative rounded-2xl overflow-hidden aspect-[3/4] shadow-md hover:shadow-2xl transition-all duration-500 hover:-translate-y-1">
            <img src="https://images.unsplash.com/photo-1425082661705-1834bfd09dca?w=400&h=500&fit=crop&q=80" alt="Otros animales" class="absolute inset-0 w-full h-full object-cover group-hover:scale-110 transition-transform duration-700" loading="lazy" />
            <div class="absolute inset-0 bg-gradient-to-t from-gray-900/80 via-gray-900/20 to-transparent"></div>
            <div class="absolute bottom-0 left-0 right-0 p-5">
              <h3 class="text-white text-xl font-bold">Otros Animales</h3>
              <p class="text-white/70 text-sm mt-1">Pájaros, peces, roedores y más</p>
              <div class="flex items-center gap-1 mt-3 text-emerald-400 text-sm font-medium group-hover:gap-2 transition-all">
                Ver productos
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
              </div>
            </div>
          </a>
        </div>
      </div>
    </section>

    <!-- Catálogo de Productos -->
    <section class="py-14" id="catalogo">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-10">
          <h2 class="text-3xl md:text-4xl font-extrabold text-gray-900">
            Nuestros <span class="bg-gradient-to-r from-purple-600 to-orange-500 bg-clip-text text-transparent">productos</span>
          </h2>
          <p class="text-gray-500 mt-3 text-lg">Descubre todo lo que tenemos para tu mascota</p>
        </div>

        <div class="flex gap-8">
          <!-- Sidebar de Filtros -->
          <aside class="w-72 flex-shrink-0 hidden lg:block" aria-label="Filtros de productos">
            <div class="sticky top-20 bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
              <div class="flex items-center justify-between mb-6 pb-4 border-b border-gray-100">
                <div class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
                  </svg>
                  <span class="font-bold text-gray-900 text-lg">Filtros</span>
                </div>
                <button id="clear-all-filters" class="text-sm text-purple-600 hover:text-purple-700 font-medium transition-colors">Limpiar</button>
              </div>

              <!-- Especie -->
              <div class="filter-section border-b border-gray-50 py-3">
                <button class="filter-toggle flex justify-between items-center w-full text-left font-semibold text-gray-800 hover:text-purple-600 transition-colors text-sm uppercase tracking-wider">
                  <span>Especie</span>
                  <svg class="w-4 h-4 chevron transition-transform duration-200 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </button>
                <div class="filter-content mt-2 space-y-1.5">
                  <label class="flex items-center py-1.5 cursor-pointer group">
                    <input type="checkbox" class="filter-checkbox w-4 h-4 rounded border-gray-300 text-purple-600 focus:ring-purple-500 transition" data-filter-group="animal_type" data-value="perro">
                    <span class="ml-3 text-sm text-gray-600 group-hover:text-purple-600 transition-colors">Perro</span>
                  </label>
                  <label class="flex items-center py-1.5 cursor-pointer group">
                    <input type="checkbox" class="filter-checkbox w-4 h-4 rounded border-gray-300 text-purple-600 focus:ring-purple-500 transition" data-filter-group="animal_type" data-value="gato">
                    <span class="ml-3 text-sm text-gray-600 group-hover:text-purple-600 transition-colors">Gato</span>
                  </label>
                  <label class="flex items-center py-1.5 cursor-pointer group">
                    <input type="checkbox" class="filter-checkbox w-4 h-4 rounded border-gray-300 text-purple-600 focus:ring-purple-500 transition" data-filter-group="animal_type" data-value="otro">
                    <span class="ml-3 text-sm text-gray-600 group-hover:text-purple-600 transition-colors">Otros animales</span>
                  </label>
                </div>
              </div>

              <!-- Categoría -->
              <div class="filter-section border-b border-gray-50 py-3">
                <button class="filter-toggle flex justify-between items-center w-full text-left font-semibold text-gray-800 hover:text-purple-600 transition-colors text-sm uppercase tracking-wider">
                  <span>Categoría</span>
                  <svg class="w-4 h-4 chevron transition-transform duration-200 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </button>
                <div class="filter-content mt-2 space-y-1.5">
                  <label class="flex items-center py-1.5 cursor-pointer group">
                    <input type="checkbox" class="filter-checkbox w-4 h-4 rounded border-gray-300 text-purple-600 focus:ring-purple-500 transition" data-filter-group="category" data-value="alimentacion">
                    <span class="ml-3 text-sm text-gray-600 group-hover:text-purple-600 transition-colors">Alimentación</span>
                  </label>
                  <label class="flex items-center py-1.5 cursor-pointer group">
                    <input type="checkbox" class="filter-checkbox w-4 h-4 rounded border-gray-300 text-purple-600 focus:ring-purple-500 transition" data-filter-group="category" data-value="juguetes">
                    <span class="ml-3 text-sm text-gray-600 group-hover:text-purple-600 transition-colors">Juguetes</span>
                  </label>
                  <label class="flex items-center py-1.5 cursor-pointer group">
                    <input type="checkbox" class="filter-checkbox w-4 h-4 rounded border-gray-300 text-purple-600 focus:ring-purple-500 transition" data-filter-group="category" data-value="accesorios">
                    <span class="ml-3 text-sm text-gray-600 group-hover:text-purple-600 transition-colors">Accesorios</span>
                  </label>
                  <label class="flex items-center py-1.5 cursor-pointer group">
                    <input type="checkbox" class="filter-checkbox w-4 h-4 rounded border-gray-300 text-purple-600 focus:ring-purple-500 transition" data-filter-group="category" data-value="higiene">
                    <span class="ml-3 text-sm text-gray-600 group-hover:text-purple-600 transition-colors">Higiene</span>
