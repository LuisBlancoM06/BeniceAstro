---
import Layout from '../layouts/Layout.astro';
import OfertasFlash from '../components/OfertasFlash.astro';
import { supabase } from '../lib/supabase';

// Obtener productos
const { data: products, count: totalProducts } = await supabase
  .from('products')
  .select('*', { count: 'exact' })
  .order('created_at', { ascending: false });

const hasProducts = products && products.length > 0;
---

<Layout title="Inicio">
  <div class="bg-white min-h-screen">
    
    <!-- Hero Carousel con imágenes -->
    <div class="relative h-80 md:h-96 overflow-hidden bg-gray-100">
      <!-- Slides -->
      <div id="hero-slider" class="relative h-full">
        <div class="hero-slide absolute inset-0 opacity-100 transition-all duration-700 ease-in-out" data-slide="0">
          <img src="/images/hero/perros.jpg" alt="Productos para perros" class="w-full h-full object-cover" onerror="this.src='https://images.unsplash.com/photo-1587300003388-59208cc962cb?w=1200&h=400&fit=crop'">
          <div class="absolute inset-0 bg-gradient-to-r from-purple-900/70 to-transparent flex items-center">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
              <h2 class="text-3xl md:text-5xl font-bold text-white mb-4">Todo para tu Perro</h2>
              <p class="text-white/90 text-lg mb-6 max-w-md">Los mejores productos para el cuidado de tu mejor amigo</p>
              <a href="/animales/perros" class="inline-block bg-orange-500 hover:bg-orange-600 text-white font-bold py-3 px-8 rounded-full transition-all shadow-lg hover:shadow-xl">Ver productos →</a>
            </div>
          </div>
        </div>
        <div class="hero-slide absolute inset-0 opacity-0 translate-x-full transition-all duration-700 ease-in-out" data-slide="1">
          <img src="/images/hero/gatos.jpg" alt="Productos para gatos" class="w-full h-full object-cover" onerror="this.src='https://images.unsplash.com/photo-1514888286974-6c03e2ca1dba?w=1200&h=400&fit=crop'">
          <div class="absolute inset-0 bg-gradient-to-r from-orange-900/70 to-transparent flex items-center">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
              <h2 class="text-3xl md:text-5xl font-bold text-white mb-4">Mima a tu Gato</h2>
              <p class="text-white/90 text-lg mb-6 max-w-md">Alimentación premium y accesorios para felinos exigentes</p>
              <a href="/animales/gatos" class="inline-block bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-8 rounded-full transition-all shadow-lg hover:shadow-xl">Descubrir →</a>
            </div>
          </div>
        </div>
        <div class="hero-slide absolute inset-0 opacity-0 translate-x-full transition-all duration-700 ease-in-out" data-slide="2">
          <img src="/images/hero/favoritos.jpg" alt="Tus favoritos" class="w-full h-full object-cover" onerror="this.src='https://images.unsplash.com/photo-1450778869180-41d0601e046e?w=1200&h=400&fit=crop'">
          <div class="absolute inset-0 bg-gradient-to-r from-purple-900/70 to-transparent flex items-center">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
              <h2 class="text-3xl md:text-5xl font-bold text-white mb-4">Tus Favoritos</h2>
              <p class="text-white/90 text-lg mb-6 max-w-md">Guarda los productos que más te gustan y encuéntralos fácilmente</p>
              <a href="/cuenta/favoritos" class="inline-block bg-red-500 hover:bg-red-600 text-white font-bold py-3 px-8 rounded-full transition-all shadow-lg hover:shadow-xl">Ver favoritos</a>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Botones de navegación -->
      <button id="hero-prev" class="absolute left-4 top-1/2 -translate-y-1/2 w-12 h-12 bg-white/90 hover:bg-white rounded-full shadow-lg flex items-center justify-center transition-all hover:scale-110 z-10">
        <svg class="w-6 h-6 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      </button>
      <button id="hero-next" class="absolute right-4 top-1/2 -translate-y-1/2 w-12 h-12 bg-white/90 hover:bg-white rounded-full shadow-lg flex items-center justify-center transition-all hover:scale-110 z-10">
        <svg class="w-6 h-6 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </button>
      
      <!-- Indicadores -->
      <div class="absolute bottom-4 left-1/2 -translate-x-1/2 flex gap-2 z-10">
        <button class="hero-dot w-3 h-3 rounded-full bg-white/90 transition-all" data-dot="0"></button>
        <button class="hero-dot w-3 h-3 rounded-full bg-white/50 transition-all" data-dot="1"></button>
        <button class="hero-dot w-3 h-3 rounded-full bg-white/50 transition-all" data-dot="2"></button>
      </div>
    </div>

    <!-- Sección de Ofertas Flash -->
    <OfertasFlash />

    <div class="max-w-7xl mx-auto px-4 py-6">
      <div class="flex gap-8">
        
        <!-- Sidebar de Filtros -->
        <aside class="w-64 flex-shrink-0 hidden lg:block">
          <div class="sticky top-4">
            <div class="flex items-center gap-2 mb-6 pb-4 border-b border-gray-200">
              <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
              </svg>
              <span class="font-bold text-gray-800 text-lg">Filtros</span>
            </div>

            <!-- Especie -->
            <div class="filter-section border-b border-gray-100 py-3">
              <button class="filter-toggle flex justify-between items-center w-full text-left font-medium text-gray-700 hover:text-purple-600 transition-colors">
                <span>Especie</span>
                <svg class="w-4 h-4 chevron transition-transform text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </button>
              <div class="filter-content mt-2 space-y-1">
                <label class="flex items-center py-1 cursor-pointer hover:text-purple-600 transition-colors">
                  <input type="checkbox" class="w-4 h-4 rounded border-gray-300 text-purple-500 focus:ring-purple-400">
                  <span class="ml-2 text-sm text-gray-600">Perro</span>
                </label>
                <label class="flex items-center py-1 cursor-pointer hover:text-purple-600 transition-colors">
                  <input type="checkbox" class="w-4 h-4 rounded border-gray-300 text-purple-500 focus:ring-purple-400">
                  <span class="ml-2 text-sm text-gray-600">Gato</span>
                </label>
                <label class="flex items-center py-1 cursor-pointer hover:text-purple-600 transition-colors">
                  <input type="checkbox" class="w-4 h-4 rounded border-gray-300 text-purple-500 focus:ring-purple-400">
                  <span class="ml-2 text-sm text-gray-600">Otros animales</span>
                </label>
              </div>
            </div>

            <!-- Categoría -->
            <div class="filter-section border-b border-gray-100 py-3">
              <button class="filter-toggle flex justify-between items-center w-full text-left font-medium text-gray-700 hover:text-purple-600 transition-colors">
                <span>Categoría</span>
                <svg class="w-4 h-4 chevron transition-transform text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </button>
              <div class="filter-content mt-2 space-y-1">
                <label class="flex items-center py-1 cursor-pointer">
                  <input type="checkbox" class="w-4 h-4 rounded border-gray-300 text-purple-500 focus:ring-purple-400">
                  <span class="ml-2 text-sm text-gray-600">Alimento</span>
                </label>
                <label class="flex items-center py-1 cursor-pointer">
                  <input type="checkbox" class="w-4 h-4 rounded border-gray-300 text-purple-500 focus:ring-purple-400">
                  <span class="ml-2 text-sm text-gray-600">Juguetes</span>
                </label>
                <label class="flex items-center py-1 cursor-pointer">
                  <input type="checkbox" class="w-4 h-4 rounded border-gray-300 text-purple-500 focus:ring-purple-400">
                  <span class="ml-2 text-sm text-gray-600">Accesorios</span>
                </label>
                <label class="flex items-center py-1 cursor-pointer">
                  <input type="checkbox" class="w-4 h-4 rounded border-gray-300 text-purple-500 focus:ring-purple-400">
                  <span class="ml-2 text-sm text-gray-600">Salud</span>
                </label>
              </div>
            </div>

            <!-- Productos en Oferta -->
            <div class="filter-section border-b border-gray-100 py-3">
              <button class="filter-toggle flex justify-between items-center w-full text-left font-medium text-gray-700 hover:text-purple-600 transition-colors">
                <span>Productos en Oferta</span>
                <svg class="w-4 h-4 chevron transition-transform text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </button>
              <div class="filter-content mt-2">
                <label class="flex items-center py-1 cursor-pointer">
                  <input type="checkbox" class="w-4 h-4 rounded border-gray-300 text-purple-500 focus:ring-purple-400">
                  <span class="ml-2 text-sm text-gray-600">Solo ofertas</span>
                </label>
              </div>
            </div>

            <!-- Precio con slider -->
            <div class="filter-section border-b border-gray-100 py-3">
              <button class="filter-toggle flex justify-between items-center w-full text-left font-medium text-gray-700 hover:text-purple-600 transition-colors">
                <span>Precio</span>
                <svg class="w-4 h-4 chevron transition-transform text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </button>
              <div class="filter-content mt-2">
                <div class="px-1">
                  <div class="flex justify-between text-sm text-gray-600 mb-2">
                    <span id="price-min-label">0€</span>
                    <span id="price-max-label">200€</span>
                  </div>
                  <div class="relative h-2 mb-4">
                    <div class="absolute inset-0 bg-gray-200 rounded-full"></div>
                    <div id="price-range-track" class="absolute h-full bg-purple-500 rounded-full" style="left: 0%; right: 0%;"></div>
                    <input type="range" id="price-min" min="0" max="200" value="0" step="5" 
                      class="price-slider absolute w-full h-2 appearance-none bg-transparent pointer-events-auto cursor-pointer">
                    <input type="range" id="price-max" min="0" max="200" value="200" step="5" 
                      class="price-slider absolute w-full h-2 appearance-none bg-transparent pointer-events-auto cursor-pointer">
                  </div>
                  <div class="flex gap-2 items-center">
                    <input type="number" id="price-min-input" value="0" min="0" max="200" 
                      class="w-20 px-2 py-1 border border-gray-200 rounded text-sm text-center focus:ring-2 focus:ring-purple-400 focus:border-transparent">
                    <span class="text-gray-400">—</span>
                    <input type="number" id="price-max-input" value="200" min="0" max="200" 
                      class="w-20 px-2 py-1 border border-gray-200 rounded text-sm text-center focus:ring-2 focus:ring-purple-400 focus:border-transparent">
                  </div>
                </div>
              </div>
            </div>

            <!-- Edad -->
            <div class="filter-section border-b border-gray-100 py-3">
              <button class="filter-toggle flex justify-between items-center w-full text-left font-medium text-gray-700 hover:text-purple-600 transition-colors">
                <span>Edad</span>
                <svg class="w-4 h-4 chevron transition-transform text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </button>
              <div class="filter-content mt-2 space-y-1">
                <label class="flex items-center py-1 cursor-pointer">
                  <input type="checkbox" class="w-4 h-4 rounded border-gray-300 text-purple-500 focus:ring-purple-400">
                  <span class="ml-2 text-sm text-gray-600">Cachorro</span>
                </label>
                <label class="flex items-center py-1 cursor-pointer">
                  <input type="checkbox" class="w-4 h-4 rounded border-gray-300 text-purple-500 focus:ring-purple-400">
                  <span class="ml-2 text-sm text-gray-600">Adulto</span>
                </label>
                <label class="flex items-center py-1 cursor-pointer">
                  <input type="checkbox" class="w-4 h-4 rounded border-gray-300 text-purple-500 focus:ring-purple-400">
                  <span class="ml-2 text-sm text-gray-600">Senior</span>
                </label>
              </div>
            </div>

            <!-- Tamaño raza -->
            <div class="filter-section border-b border-gray-100 py-3">
              <button class="filter-toggle flex justify-between items-center w-full text-left font-medium text-gray-700 hover:text-purple-600 transition-colors">
                <span>Tamaño raza</span>
                <svg class="w-4 h-4 chevron transition-transform text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </button>
              <div class="filter-content mt-2 space-y-1">
                <label class="flex items-center py-1 cursor-pointer">
                  <input type="checkbox" class="w-4 h-4 rounded border-gray-300 text-purple-500 focus:ring-purple-400">
                  <span class="ml-2 text-sm text-gray-600">Pequeño</span>
                </label>
                <label class="flex items-center py-1 cursor-pointer">
                  <input type="checkbox" class="w-4 h-4 rounded border-gray-300 text-purple-500 focus:ring-purple-400">
                  <span class="ml-2 text-sm text-gray-600">Mediano</span>
                </label>
                <label class="flex items-center py-1 cursor-pointer">
                  <input type="checkbox" class="w-4 h-4 rounded border-gray-300 text-purple-500 focus:ring-purple-400">
                  <span class="ml-2 text-sm text-gray-600">Grande</span>
                </label>
              </div>
            </div>
          </div>
        </aside>

        <!-- Contenido principal - Productos -->
        <div class="flex-1">
          
          <!-- Barra superior: Resultados + Ordenar -->
          <div class="flex items-center justify-between mb-6 pb-4 border-b border-gray-100">
            <p class="text-gray-700 font-medium">
              <span class="text-purple-600 font-bold text-xl">{totalProducts || 0}</span> Resultados
            </p>
            <div class="flex items-center gap-3">
              <span class="text-sm text-gray-500">Ordenar por</span>
              <select class="px-4 py-2 border border-gray-200 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-purple-400 cursor-pointer bg-white">
                <option value="precio-asc">Precio: menor a mayor</option>
                <option value="precio-desc">Precio: mayor a menor</option>
                <option value="nombre">Nombre A-Z</option>
                <option value="valoracion">Mejor valorados</option>
              </select>
            </div>
          </div>

          <!-- Grid de productos o mensaje vacío -->
          {hasProducts ? (
            <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
              {products.map((product: any) => (
                <div class="product-card" data-product={JSON.stringify(product)}>
                  <!-- Renderizado por React -->
                </div>
              ))}
            </div>
          ) : (
            <!-- Estado vacío -->
            <div class="flex flex-col items-center justify-center py-20">
              <div class="relative mb-8">
                <div class="w-40 h-40 bg-purple-100 rounded-full flex items-center justify-center">
                  <svg class="w-20 h-20 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                  </svg>
                </div>
                <div class="absolute -top-2 -right-2 w-12 h-12 bg-orange-400 rounded-full flex items-center justify-center animate-pulse shadow-lg">
                  <span class="text-white text-xl font-bold">?</span>
                </div>
              </div>
              
              <h2 class="text-4xl font-bold text-gray-800 mb-4 text-center">
                No hay productos
              </h2>
              <p class="text-gray-500 text-center max-w-md mb-8 text-lg">
                Parece que aún no hemos añadido productos a la tienda. 
                Vuelve pronto para descubrir las mejores ofertas para tu mascota.
              </p>
              
              <div class="flex flex-col sm:flex-row gap-4">
                <a href="/productos" class="px-8 py-4 bg-purple-600 text-white font-bold rounded-xl hover:bg-purple-700 transition-all shadow-lg hover:shadow-xl transform hover:-translate-y-1 flex items-center gap-2 text-lg">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                  </svg>
                  Ver catálogo
                </a>
                <button onclick="window.location.reload()" class="px-8 py-4 border-2 border-gray-300 text-gray-700 font-bold rounded-xl hover:border-purple-400 hover:text-purple-600 transition-all flex items-center gap-2 text-lg">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                  </svg>
                  Recargar
                </button>
              </div>
            </div>
          )}
        </div>
      </div>
    </div>
  </div>

  <style>
    .filter-content {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease-out, opacity 0.3s ease-out;
      opacity: 0;
    }
    .filter-section.open .filter-content {
      max-height: 500px;
      opacity: 1;
    }
    .filter-section.open .chevron {
      transform: rotate(180deg);
    }
    .line-clamp-2 {
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
    /* Estilos para el slider de precio dual */
    .price-slider {
      -webkit-appearance: none;
      appearance: none;
      background: transparent;
      z-index: 10;
    }
    .price-slider::-webkit-slider-thumb {
      -webkit-appearance: none;
      appearance: none;
      width: 18px;
      height: 18px;
      border-radius: 50%;
      background: #7e22ce;
      cursor: pointer;
      border: 3px solid white;
      box-shadow: 0 2px 6px rgba(0,0,0,0.2);
      position: relative;
      z-index: 20;
    }
    .price-slider::-moz-range-thumb {
      width: 18px;
      height: 18px;
      border-radius: 50%;
      background: #7e22ce;
      cursor: pointer;
      border: 3px solid white;
      box-shadow: 0 2px 6px rgba(0,0,0,0.2);
    }
  </style>

  <script>
    // Toggle de filtros
    document.querySelectorAll('.filter-toggle').forEach((button) => {
      button.addEventListener('click', () => {
        const section = button.closest('.filter-section');
        section?.classList.toggle('open');
      });
    });

    // Añadir al carrito
    document.querySelectorAll('.add-to-cart').forEach(button => {
      button.addEventListener('click', (e) => {
        const btn = e.currentTarget as HTMLButtonElement;
        const product = {
          id: btn.dataset.productId,
          name: btn.dataset.productName,
          price: parseFloat(btn.dataset.productPrice || '0'),
          image: btn.dataset.productImage,
          quantity: 1
        };

        let cart = JSON.parse(localStorage.getItem('cart') || '[]');
        const existingIndex = cart.findIndex((p: any) => p.id === product.id);
        
        if (existingIndex > -1) {
          cart[existingIndex].quantity += 1;
        } else {
          cart.push(product);
        }

        localStorage.setItem('cart', JSON.stringify(cart));
        
        const cartCount = document.getElementById('cart-count');
        if (cartCount) {
          const totalItems = cart.reduce((sum: number, p: any) => sum + p.quantity, 0);
          cartCount.textContent = totalItems.toString();
        }

        btn.innerHTML = `
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          Añadido
        `;
        btn.classList.remove('bg-purple-600');
        btn.classList.add('bg-green-500');
        
        setTimeout(() => {
          btn.innerHTML = `
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            Añadir al carrito
          `;
          btn.classList.remove('bg-green-500');
          btn.classList.add('bg-purple-600');
        }, 2000);
      });
    });

    // Hero Carousel
    function initHeroCarousel() {
      const slides = document.querySelectorAll('.hero-slide');
      const dots = document.querySelectorAll('.hero-dot');
      const prevBtn = document.getElementById('hero-prev');
      const nextBtn = document.getElementById('hero-next');
      
      if (slides.length === 0) return;
      
      let currentSlide = 0;
      let autoplayInterval: number;
      
      function goToSlide(index: number) {
        // Ocultar slide actual
        slides[currentSlide].classList.remove('opacity-100', 'translate-x-0');
        slides[currentSlide].classList.add('opacity-0', '-translate-x-full');
        dots[currentSlide].classList.remove('bg-white/90');
        dots[currentSlide].classList.add('bg-white/50');
        
        // Preparar nuevo slide
        currentSlide = index;
        if (currentSlide >= slides.length) currentSlide = 0;
        if (currentSlide < 0) currentSlide = slides.length - 1;
        
        slides[currentSlide].classList.remove('opacity-0', '-translate-x-full', 'translate-x-full');
        slides[currentSlide].classList.add('translate-x-full');
        
        setTimeout(() => {
          slides[currentSlide].classList.remove('translate-x-full');
          slides[currentSlide].classList.add('opacity-100', 'translate-x-0');
        }, 50);
        
        dots[currentSlide].classList.remove('bg-white/50');
        dots[currentSlide].classList.add('bg-white/90');
      }
      
      function nextSlide() {
        goToSlide(currentSlide + 1);
      }
      
      function prevSlide() {
        goToSlide(currentSlide - 1);
      }
      
      function startAutoplay() {
        autoplayInterval = window.setInterval(nextSlide, 3000);
      }
      
      function stopAutoplay() {
        clearInterval(autoplayInterval);
      }
      
      // Event listeners
      nextBtn?.addEventListener('click', () => {
        stopAutoplay();
        nextSlide();
        startAutoplay();
      });
      
      prevBtn?.addEventListener('click', () => {
        stopAutoplay();
        prevSlide();
        startAutoplay();
      });
      
      dots.forEach((dot, index) => {
        dot.addEventListener('click', () => {
          stopAutoplay();
          goToSlide(index);
          startAutoplay();
        });
      });
      
      // Iniciar autoplay
      startAutoplay();
    }
    
    // Price Range Slider
    function initPriceSlider() {
      const minSlider = document.getElementById('price-min') as HTMLInputElement;
      const maxSlider = document.getElementById('price-max') as HTMLInputElement;
      const minInput = document.getElementById('price-min-input') as HTMLInputElement;
      const maxInput = document.getElementById('price-max-input') as HTMLInputElement;
      const minLabel = document.getElementById('price-min-label');
      const maxLabel = document.getElementById('price-max-label');
      const track = document.getElementById('price-range-track');
      
      if (!minSlider || !maxSlider) return;
      
      function updateTrack() {
        const min = parseInt(minSlider.value);
        const max = parseInt(maxSlider.value);
        const maxVal = parseInt(minSlider.max);
        
        const leftPercent = (min / maxVal) * 100;
        const rightPercent = 100 - (max / maxVal) * 100;
        
        if (track) {
          track.style.left = leftPercent + '%';
          track.style.right = rightPercent + '%';
        }
        
        if (minLabel) minLabel.textContent = min + '€';
        if (maxLabel) maxLabel.textContent = max + '€';
        if (minInput) minInput.value = String(min);
        if (maxInput) maxInput.value = String(max);
      }
      
      minSlider.addEventListener('input', () => {
        if (parseInt(minSlider.value) > parseInt(maxSlider.value)) {
          minSlider.value = maxSlider.value;
        }
        updateTrack();
      });
      
      maxSlider.addEventListener('input', () => {
        if (parseInt(maxSlider.value) < parseInt(minSlider.value)) {
          maxSlider.value = minSlider.value;
        }
        updateTrack();
      });
      
      minInput?.addEventListener('change', () => {
        let val = parseInt(minInput.value) || 0;
        if (val > parseInt(maxSlider.value)) val = parseInt(maxSlider.value);
        if (val < 0) val = 0;
        minSlider.value = String(val);
        updateTrack();
      });
      
      maxInput?.addEventListener('change', () => {
        let val = parseInt(maxInput.value) || 200;
        if (val < parseInt(minSlider.value)) val = parseInt(minSlider.value);
        if (val > 200) val = 200;
        maxSlider.value = String(val);
        updateTrack();
      });
      
      updateTrack();
    }
    
    // Inicializar todo
    initHeroCarousel();
    initPriceSlider();
  </script>

