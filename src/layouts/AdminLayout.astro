import { createServerClient, supabaseAdmin } from '../lib/supabase';

interface Props {
  title: string;
  currentPage?: string;
}

const { title, currentPage = 'dashboard' } = Astro.props;

// Proteger ruta - verificar sesión activa
const supabase = await createServerClient(Astro.cookies);
const { data: { session } } = await supabase.auth.getSession();

if (!session) {
  return Astro.redirect('/auth/login');
}

// Usar supabaseAdmin para consultar rol (bypasea RLS)
const { data: userData } = await supabaseAdmin
  .from('users')
  .select('role, full_name, email')
  .eq('id', session.user.id)
  .single();

if (!userData || userData.role !== 'admin') {
  return Astro.redirect('/');
}

// Obtener conteos para badges (con admin para ver TODOS los datos)
const { count: pendingOrders } = await supabaseAdmin
  .from('orders')
  .select('*', { count: 'exact', head: true })
  .eq('status', 'pendiente');

const { count: lowStockCount } = await supabaseAdmin
  .from('products')
  .select('*', { count: 'exact', head: true })
  .lt('stock', 10);

const { count: pendingReturns } = await supabaseAdmin
  .from('returns')
  .select('*', { count: 'exact', head: true })
  .eq('status', 'solicitada');

const menuItems = [
  {
    id: 'dashboard',
    label: 'Dashboard',
    icon: 'home',
    href: '/admin',
    badge: null
  },
  {
    id: 'divider-1',
    type: 'divider',
    label: 'Ventas'
  },
  {
    id: 'pedidos',
    label: 'Pedidos',
    icon: 'shopping-bag',
    href: '/admin/pedidos',
    badge: pendingOrders || null,
    badgeColor: 'orange'
  },
  {
    id: 'facturas',
    label: 'Facturas',
    icon: 'file-text',
    href: '/admin/facturas',
    badge: null
  },
  {
    id: 'devoluciones',
    label: 'Devoluciones',
    icon: 'rotate-ccw',
    href: '/admin/devoluciones',
    badge: pendingReturns || null,
    badgeColor: 'red'
  },
  {
    id: 'divider-2',
    type: 'divider',
    label: 'Catálogo'
  },
  {
    id: 'productos',
    label: 'Productos',
    icon: 'package',
    href: '/admin/productos',
    badge: lowStockCount || null,
    badgeColor: 'yellow'
  },
  {
    id: 'nuevo-producto',
    label: 'Añadir Producto',
    icon: 'plus-circle',
    href: '/admin/productos/nuevo',
    badge: null
  },
  {
    id: 'divider-3',
    type: 'divider',
    label: 'Marketing'
  },
  {
    id: 'ofertas',
    label: 'Ofertas Flash',
    icon: 'zap',
    href: '/admin/ofertas',
    badge: null
  },
  {
    id: 'newsletter',
    label: 'Newsletter',
    icon: 'mail',
    href: '/admin/newsletter',
    badge: null
  },
  {
    id: 'divider-4',
    type: 'divider',
    label: 'Configuración'
  },
  {
    id: 'visitas',
    label: 'Visitas',
    icon: 'eye',
    href: '/admin/visitas',
    badge: null
  },
  {
    id: 'ajustes',
    label: 'Ajustes',
    icon: 'settings',
    href: '/admin/ajustes',
    badge: null
  },
  {
    id: 'divider-5',
    type: 'divider',
    label: 'Mi Cuenta'
  },
  {
    id: 'mi-perfil',
    label: 'Mi Perfil',
    icon: 'user',
    href: '/cuenta/perfil',
    badge: null
  },
  {
    id: 'mis-pedidos',
    label: 'Mis Pedidos',
    icon: 'clipboard',
    href: '/cuenta/mis-pedidos',
    badge: null
  },
  {
    id: 'favoritos',
    label: 'Favoritos',
    icon: 'heart',
    href: '/cuenta/favoritos',
    badge: null
  },
  {
    id: 'ver-tienda',
    label: 'Ver Tienda',
    icon: 'store',
    href: '/',
    badge: null
  }
];

