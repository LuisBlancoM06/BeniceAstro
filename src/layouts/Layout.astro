          </div>
        </div>
      </div>
    </div>
  </footer>

  <script>
    import { supabase } from '../lib/supabase';

    // Verificar sesión del usuario
    async function checkAuth() {
      const { data: { session } } = await supabase.auth.getSession();
      
      const authButtons = document.getElementById('auth-buttons');
      const userMenu = document.getElementById('user-menu');
      const userEmail = document.getElementById('user-email');
      const adminLink = document.getElementById('admin-link');

      if (session) {
        authButtons?.classList.add('hidden');
        userMenu?.classList.remove('hidden');
        if (userEmail) userEmail.textContent = session.user.email || '';
        
        // Verificar rol de admin desde la base de datos
        const { data: userData } = await supabase
          .from('users')
          .select('role')
          .eq('id', session.user.id)
          .single();
        
        if (userData && userData.role === 'admin') {
          adminLink?.classList.remove('hidden');
        } else {
          adminLink?.classList.add('hidden');
        }
      } else {
        authButtons?.classList.remove('hidden');
        userMenu?.classList.add('hidden');
        adminLink?.classList.add('hidden');
      }
    }

    // Toggle del menú de usuario
    const userMenuButton = document.getElementById('user-menu-button');
    const userDropdown = document.getElementById('user-dropdown');
    
    userMenuButton?.addEventListener('click', () => {
      userDropdown?.classList.toggle('hidden');
    });

    // Menú móvil
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    
    mobileMenuBtn?.addEventListener('click', () => {
      mobileMenu?.classList.toggle('hidden');
    });

    // Cerrar menú al hacer click fuera
    document.addEventListener('click', (e) => {
      if (!userMenuButton?.contains(e.target as Node) && !userDropdown?.contains(e.target as Node)) {
        userDropdown?.classList.add('hidden');
      }
    });

    // Logout
    const logoutButton = document.getElementById('logout-button');
    logoutButton?.addEventListener('click', async () => {
      await supabase.auth.signOut();
      // Borrar cookies de sesión
      document.cookie = 'sb-access-token=; path=/; max-age=0';
      document.cookie = 'sb-refresh-token=; path=/; max-age=0';
      window.location.href = '/';
    });

    // Actualizar contador del carrito
    function updateCartCount() {
      const cart = JSON.parse(localStorage.getItem('cart') || '[]');
      const count = cart.reduce((sum: number, item: any) => sum + item.quantity, 0);
      const cartCount = document.getElementById('cart-count');
      if (cartCount) {
        cartCount.textContent = count.toString();
      }
    }

    // Actualizar contador de wishlist
    function updateWishlistCount() {
      const wishlist = JSON.parse(localStorage.getItem('wishlist') || '[]');
      const wishlistCount = document.getElementById('wishlist-count');
      if (wishlistCount) {
        if (wishlist.length > 0) {
          wishlistCount.textContent = wishlist.length.toString();
          wishlistCount.classList.remove('hidden');
        } else {
          wishlistCount.classList.add('hidden');
        }
      }
    }

    // Buscador instantáneo
    let searchTimeout: number;
    const searchInput = document.getElementById('search-input') as HTMLInputElement;
    const searchResults = document.getElementById('search-results');

    searchInput?.addEventListener('input', async (e) => {
      const query = (e.target as HTMLInputElement).value.trim();
      
      clearTimeout(searchTimeout);
      
      if (query.length < 2) {
        searchResults?.classList.add('hidden');
        return;
      }

      searchTimeout = window.setTimeout(async () => {
        try {
          const response = await fetch(`/api/search?q=${encodeURIComponent(query)}`);
          const products = await response.json();
          
          if (products.length === 0) {
            searchResults!.innerHTML = `
              <div class="p-6 text-center">
                <svg class="w-12 h-12 mx-auto mb-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
                <p class="text-gray-500">No se encontraron productos</p>
                <a href="/productos" class="text-purple-600 hover:underline text-sm mt-2 inline-block">Ver todos los productos</a>
              </div>
            `;
          } else {
            searchResults!.innerHTML = `
              <div class="p-2">
                ${products.slice(0, 5).map((p: any) => `
                  <a href="/producto/${p.slug || p.id}" class="flex items-center gap-3 p-3 hover:bg-gray-50 rounded-lg transition-colors">
                    <img src="${p.image_url}" alt="${p.name}" class="w-14 h-14 object-cover rounded-lg">
                    <div class="flex-1 min-w-0">
                      <div class="font-medium text-gray-900 truncate">${p.name}</div>
                      <div class="flex items-center gap-2">
                        ${p.on_sale ? `
                          <span class="text-purple-600 font-bold">${p.sale_price}€</span>
                          <span class="text-gray-400 line-through text-sm">${p.price}€</span>
                        ` : `
                          <span class="text-purple-600 font-bold">${p.price}€</span>
                        `}
                      </div>
                    </div>
                  </a>
                `).join('')}
                ${products.length > 5 ? `
                  <a href="/productos?q=${encodeURIComponent(query)}" class="block p-3 text-center text-purple-600 hover:bg-purple-50 rounded-lg font-medium">
                    Ver todos (${products.length} resultados) →
                  </a>
                ` : ''}
              </div>
            `;
          }
          
          searchResults?.classList.remove('hidden');
        } catch (error) {
          console.error('Error en búsqueda:', error);
        }
      }, 300);
    });

    // Cerrar resultados al hacer click fuera
    document.addEventListener('click', (e) => {
      const searchContainer = document.getElementById('search-container');
      if (!searchContainer?.contains(e.target as Node)) {
        searchResults?.classList.add('hidden');
      }
    });

    // Inicializar
    checkAuth();
    updateCartCount();
    updateWishlistCount();

    // Actualizar carrito cuando cambie
    window.addEventListener('storage', () => {
      updateCartCount();
      updateWishlistCount();
    });

    // Escuchar evento personalizado de wishlist
    window.addEventListener('wishlistUpdated', updateWishlistCount);

    // Notificaciones rotativas del banner superior
    function initNotificationSlider() {
      const notifications = document.querySelectorAll('.notification-item');
      if (notifications.length === 0) return;
      
      let currentIndex = 0;
      const totalNotifications = notifications.length;
      
      setInterval(() => {
        // Ocultar actual (sale hacia la izquierda)
        const current = notifications[currentIndex] as HTMLElement;
        current.classList.remove('opacity-100', 'translate-x-0');
        current.classList.add('opacity-0', '-translate-x-full');
        
        // Siguiente
        currentIndex = (currentIndex + 1) % totalNotifications;
        
        // Preparar siguiente (viene desde la derecha)
        const next = notifications[currentIndex] as HTMLElement;
        next.classList.remove('-translate-x-full', 'translate-x-full');
        next.classList.add('translate-x-full');
        
        // Pequeño delay para la animación
        setTimeout(() => {
          next.classList.remove('opacity-0', 'translate-x-full');
          next.classList.add('opacity-100', 'translate-x-0');
        }, 50);
        
        // Resetear el anterior para próxima vuelta
        setTimeout(() => {
          current.classList.remove('-translate-x-full');
          current.classList.add('translate-x-full');
        }, 500);
      }, 3000);
    }
    
    initNotificationSlider();
  </script>
</body>
