---
import '../styles/global.css';
import NewsletterPopup from '../components/NewsletterPopup.astro';
import CartButton from '../components/CartButton.tsx';
import CartSlideOver from '../components/CartSlideOver.tsx';
import ToastContainer from '../components/Toast.tsx';
import QuickViewModal from '../components/QuickViewModal.tsx';
import CookieBanner from '../components/CookieBanner.tsx';

interface Props {
  title: string;
  description?: string;
  hideNewsletterPopup?: boolean;
}

const { title, description = 'Tienda online de productos para mascotas', hideNewsletterPopup = false } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <meta name="theme-color" content="#7e22ce">
  <meta property="og:title" content={`${title} - Venice Pet Shop`}>
  <meta property="og:description" content={description}>
  <meta property="og:type" content="website">
  <title>{title} - Venice Pet Shop</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
</head>
<body class="antialiased">
  <!-- Banner superior con notificaciones rotativas -->
  <div class="bg-purple-700 text-white py-2 text-sm overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-center items-center">
        <div class="notification-slider relative w-full flex justify-center">
          <div class="notification-item absolute inset-0 flex items-center justify-center opacity-100 transition-all duration-500" data-index="0">
            <span class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path></svg>
              Envío GRATIS en pedidos +49€
            </span>
          </div>
          <div class="notification-item absolute inset-0 flex items-center justify-center opacity-0 transition-all duration-500 translate-x-full" data-index="1">
            <span class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
              ¡Consigue 5€ de descuento en compras +25€!
            </span>
          </div>
          <div class="notification-item absolute inset-0 flex items-center justify-center opacity-0 transition-all duration-500 translate-x-full" data-index="2">
            <span class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
              Entrega en 24-48h en toda España
            </span>
          </div>
          <!-- Placeholder para mantener altura -->
          <span class="invisible">Envío GRATIS en pedidos +49€</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Navegación principal -->
  <nav class="bg-white shadow-md sticky top-0 z-40">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <!-- Logo y menú principal -->
        <div class="flex items-center space-x-8">
          <a href="/" class="flex items-center gap-2">
            <svg class="w-10 h-10 text-purple-700" viewBox="0 0 64 64" fill="currentColor">
              <path d="M32 8c-4 0-7.5 2-9 5-1.5-3-5-5-9-5-6 0-10 4-10 10 0 8 8 16 19 25 11-9 19-17 19-25 0-6-4-10-10-10z"/>
              <ellipse cx="20" cy="28" rx="3" ry="4" fill="white"/>
              <ellipse cx="44" cy="28" rx="3" ry="4" fill="white"/>
              <path d="M26 42c0 0 6 8 6 12s-2 6-6 6c-2 0-4-1-4-3s2-3 4-3" stroke="currentColor" stroke-width="2" fill="none"/>
              <path d="M38 42c0 0-6 8-6 12s2 6 6 6c2 0 4-1 4-3s-2-3-4-3" stroke="currentColor" stroke-width="2" fill="none"/>
            </svg>
            <span class="text-2xl font-bold text-purple-700">
              Venice
            </span>
          </a>
          
          <!-- Mega menú desktop -->
          <div class="hidden lg:flex items-center space-x-1">
            <!-- Perros -->
            <div class="relative group">
              <a href="/animales/perros" class="flex items-center gap-1 px-3 py-2 text-gray-700 hover:text-purple-600 font-medium">
                Perros
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </a>
              <div class="absolute left-0 mt-0 w-64 bg-white rounded-lg shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 transform group-hover:translate-y-0 translate-y-2">
                <div class="p-4">
                  <h3 class="font-bold text-purple-700 mb-3">Para tu perro</h3>
                  <div class="space-y-2">
                    <a href="/animales/perros?categoria=alimentacion" class="block text-gray-600 hover:text-purple-600 hover:pl-2 transition-all">Alimentación</a>
                    <a href="/animales/perros?categoria=salud" class="block text-gray-600 hover:text-purple-600 hover:pl-2 transition-all">Salud</a>
                    <a href="/animales/perros?categoria=accesorios" class="block text-gray-600 hover:text-purple-600 hover:pl-2 transition-all">Accesorios</a>
                    <a href="/animales/perros?categoria=juguetes" class="block text-gray-600 hover:text-purple-600 hover:pl-2 transition-all">Juguetes</a>
                  </div>
                  <a href="/animales/perros" class="block mt-4 text-purple-600 font-medium hover:underline">Ver todo →</a>
                </div>
              </div>
            </div>

            <!-- Gatos -->
            <div class="relative group">
              <a href="/animales/gatos" class="flex items-center gap-1 px-3 py-2 text-gray-700 hover:text-purple-600 font-medium">
                Gatos
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </a>
              <div class="absolute left-0 mt-0 w-64 bg-white rounded-lg shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 transform group-hover:translate-y-0 translate-y-2">
                <div class="p-4">
                  <h3 class="font-bold text-orange-500 mb-3">Para tu gato</h3>
                  <div class="space-y-2">
                    <a href="/animales/gatos?categoria=alimentacion" class="block text-gray-600 hover:text-orange-500 hover:pl-2 transition-all">Alimentación</a>
                    <a href="/animales/gatos?categoria=salud" class="block text-gray-600 hover:text-orange-500 hover:pl-2 transition-all">Salud</a>
                    <a href="/animales/gatos?categoria=accesorios" class="block text-gray-600 hover:text-orange-500 hover:pl-2 transition-all">Accesorios</a>
                    <a href="/animales/gatos?categoria=juguetes" class="block text-gray-600 hover:text-orange-500 hover:pl-2 transition-all">Juguetes</a>
                  </div>
                  <a href="/animales/gatos" class="block mt-4 text-orange-500 font-medium hover:underline">Ver todo →</a>
                </div>
              </div>
            </div>

            <a href="/ofertas" class="px-3 py-2 text-red-600 hover:text-red-700 font-bold flex items-center gap-1">
              Ofertas
            </a>
          </div>
        </div>
        
        <!-- Acciones derecha -->
        <div class="flex items-center space-x-3">
          <!-- Buscador -->
          <div class="relative hidden sm:block" id="search-container">
            <div class="relative">
              <input
                type="text"
                id="search-input"
                placeholder="¿Qué buscas?"
                class="w-48 lg:w-64 pl-10 pr-4 py-2 rounded-full border border-gray-200 focus:border-purple-500 focus:ring-2 focus:ring-purple-200 transition-all"
              />
              <svg class="w-5 h-5 text-gray-400 absolute left-3 top-1/2 -translate-y-1/2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </div>
            <div id="search-results" class="absolute z-50 w-80 mt-2 bg-white rounded-xl shadow-2xl hidden max-h-96 overflow-y-auto border border-gray-100"></div>
          </div>

          <!-- Favoritos -->
          <a href="/cuenta/favoritos" class="relative p-2 text-gray-600 hover:text-purple-600 transition-colors" title="Favoritos">
            <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
            </svg>
            <span id="wishlist-count" class="absolute -top-1 -right-1 w-5 h-5 bg-red-500 text-white text-xs rounded-full flex items-center justify-center hidden">0</span>
          </a>

          <!-- Carrito React -->
          <CartButton client:load />
          
          <!-- Auth -->
          <div id="auth-buttons">
            <a href="/auth/login" class="bg-purple-600 text-white px-4 py-2 rounded-full text-sm font-medium hover:bg-purple-700 transition-colors">
              Entrar
            </a>
          </div>
          
          <div id="user-menu" class="hidden relative">
            <button id="user-menu-button" class="flex items-center gap-2 p-2 rounded-full hover:bg-gray-100 transition-colors">
              <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
              <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>
            <div id="user-dropdown" class="hidden absolute right-0 mt-2 w-56 bg-white rounded-xl shadow-xl py-2 border border-gray-100">
              <div class="px-4 py-2 border-b border-gray-100">
                <p class="text-sm text-gray-500">Hola,</p>
                <p id="user-email" class="font-medium text-gray-900 truncate"></p>
              </div>
              <a href="/cuenta/perfil" class="flex items-center gap-3 px-4 py-2 text-gray-700 hover:bg-gray-50" id="perfil-link">
                <svg class="w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                Mi Perfil
              </a>
              <a href="/cuenta/mis-pedidos" class="flex items-center gap-3 px-4 py-2 text-gray-700 hover:bg-gray-50" id="pedidos-link">
                <svg class="w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                </svg>
                Mis Pedidos
              </a>
              <a href="/cuenta/favoritos" class="flex items-center gap-3 px-4 py-2 text-gray-700 hover:bg-gray-50" id="favoritos-link">
                <svg class="w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                </svg>
                Favoritos
              </a>
              <a href="/admin" class="flex items-center gap-3 px-4 py-2 text-purple-700 hover:bg-purple-50 font-medium hidden" id="admin-link">
                <svg class="w-5 h-5 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                Administración
              </a>
              <div class="border-t border-gray-100 mt-2 pt-2">
                <button id="logout-button" class="flex items-center gap-3 px-4 py-2 text-red-600 hover:bg-red-50 w-full">
                  <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                  </svg>
                  Cerrar Sesión
                </button>
              </div>
            </div>
          </div>

          <!-- Menú móvil -->
          <button id="mobile-menu-btn" class="lg:hidden p-2">
            <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Menú móvil -->
    <div id="mobile-menu" class="hidden lg:hidden bg-white border-t">
      <div class="px-4 py-4 space-y-3">
        <a href="/animales/perros" class="block py-2 text-gray-700 font-medium">Perros</a>
        <a href="/animales/gatos" class="block py-2 text-gray-700 font-medium">Gatos</a>
        <a href="/ofertas" class="block py-2 text-red-600 font-bold">Ofertas</a>
        <a href="/info/contacto" class="block py-2 text-gray-700 font-medium">Contacto</a>
      </div>
    </div>
  </nav>

  <!-- Toast Notifications -->
  <ToastContainer client:load />
  
  <!-- Quick View Modal -->
  <QuickViewModal client:load />

  <main class="min-h-screen">
    <slot />
  </main>

  <!-- Carrito Slide-Over React -->
  <CartSlideOver client:load />

  <!-- Newsletter Popup -->
  {!hideNewsletterPopup && <NewsletterPopup />}

  <!-- Cookie Banner GDPR -->
  <CookieBanner client:load />

  <footer class="bg-gray-900 text-white mt-12">
    <!-- Beneficios -->
    <div class="border-b border-gray-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          <div class="flex items-center gap-3">
            <div>
              <h4 class="font-bold">Envío Gratis</h4>
              <p class="text-sm text-gray-400">En pedidos +49€</p>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <div>
              <h4 class="font-bold">30 días</h4>
              <p class="text-sm text-gray-400">Para devoluciones</p>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <div>
              <h4 class="font-bold">Pago Seguro</h4>
              <p class="text-sm text-gray-400">SSL + Stripe</p>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <div>
              <h4 class="font-bold">Atención 24/7</h4>
              <p class="text-sm text-gray-400">Siempre disponibles</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Links principales -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="grid grid-cols-2 md:grid-cols-5 gap-8">
        <div class="col-span-2 md:col-span-1">
          <a href="/" class="flex items-center gap-2 mb-4">
            <span class="text-2xl font-bold">Venice</span>
          </a>
          <p class="text-gray-400 text-sm mb-4">Tu tienda de confianza para el cuidado de tus mascotas</p>
          <div class="flex gap-3">
            <a href="#" class="w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center hover:bg-purple-600 transition-colors">
              <span>FB</span>
            </a>
            <a href="#" class="w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center hover:bg-purple-600 transition-colors">
              <span>IG</span>
            </a>
            <a href="#" class="w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center hover:bg-purple-600 transition-colors">
              <span>TW</span>
            </a>
          </div>
        </div>

        <div>
          <h3 class="font-bold mb-4">Tienda</h3>
          <ul class="space-y-2 text-gray-400 text-sm">
            <li><a href="/animales/perros" class="hover:text-white transition-colors">Perros</a></li>
            <li><a href="/animales/gatos" class="hover:text-white transition-colors">Gatos</a></li>
            <li><a href="/ofertas" class="hover:text-white transition-colors">Ofertas</a></li>
            <li><a href="/productos" class="hover:text-white transition-colors">Todos los productos</a></li>
          </ul>
        </div>

        <div>
          <h3 class="font-bold mb-4">Información</h3>
          <ul class="space-y-2 text-gray-400 text-sm">
            <li><a href="/info/sobre-nosotros" class="hover:text-white transition-colors">Sobre nosotros</a></li>
            <li><a href="/blog" class="hover:text-white transition-colors">Blog</a></li>
            <li><a href="/info/contacto" class="hover:text-white transition-colors">Contacto</a></li>
            <li><a href="/info/faq" class="hover:text-white transition-colors">Preguntas frecuentes</a></li>
          </ul>
        </div>

        <div>
          <h3 class="font-bold mb-4">Ayuda</h3>
          <ul class="space-y-2 text-gray-400 text-sm">
            <li><a href="/info/envios" class="hover:text-white transition-colors">Envíos y devoluciones</a></li>
            <li><a href="/cuenta/mis-pedidos" class="hover:text-white transition-colors">Seguir mi pedido</a></li>
            <li><a href="/legal/terminos" class="hover:text-white transition-colors">Términos y condiciones</a></li>
            <li><a href="/legal/privacidad" class="hover:text-white transition-colors">Política de privacidad</a></li>
            <li><a href="/legal/cookies" class="hover:text-white transition-colors">Política de cookies</a></li>
          </ul>
        </div>

        <div>
          <h3 class="font-bold mb-4">Contacto</h3>
          <ul class="space-y-2 text-gray-400 text-sm">
            <li class="flex items-center gap-2">
              <a href="tel:900123456" class="hover:text-white transition-colors">900 123 456</a>
            </li>
            <li class="flex items-center gap-2">
              <a href="mailto:info@venice.com" class="hover:text-white transition-colors">info@venice.com</a>
            </li>
            <li class="flex items-center gap-2">
              <a href="https://wa.me/34600000000" class="hover:text-white transition-colors">WhatsApp</a>
            </li>
            <li class="flex items-start gap-2 mt-2">
              <span>Calle Gran Vía, 123<br>28013 Madrid</span>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Newsletter Footer -->
    <div class="border-t border-gray-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="flex flex-col md:flex-row items-center justify-between gap-4">
          <div>
            <h3 class="font-bold text-lg">Suscríbete a nuestra newsletter</h3>
            <p class="text-gray-400 text-sm">Recibe ofertas exclusivas y novedades</p>
          </div>
          <form class="flex gap-2 w-full md:w-auto">
            <input 
              type="email" 
              placeholder="tu@email.com" 
              class="flex-1 md:w-64 px-4 py-2 rounded-lg bg-gray-800 border border-gray-700 focus:border-purple-500 focus:ring-2 focus:ring-purple-500/20"
            />
            <button type="submit" class="bg-purple-600 text-white px-6 py-2 rounded-lg font-medium hover:bg-purple-700 transition-colors whitespace-nowrap">
              Suscribirse
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- Copyright y métodos de pago -->
    <div class="border-t border-gray-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="flex flex-col md:flex-row items-center justify-between gap-4">
